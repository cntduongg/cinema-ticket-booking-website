    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Navbar CSS - Homepage Theme -->
    <style>
        /* Root Variables */
        :root {
            --primary-blue: #E8F4FD;
            --secondary-blue: #D1E9F6;
            --accent-blue: #B8DDFF;
            --deep-blue: #7FB8D3;
            --dark-blue: #4A90A4;
            --text-dark: #1A365D;
            --text-light: #4A5568;
            --white: #FFFFFF;
            --gray-100: #EDF2F7;
            --gray-200: #E2E8F0;
            --gradient-header: linear-gradient(135deg, rgba(26, 54, 93, 0.95) 0%, rgba(74, 144, 164, 0.9) 100%);
            --gradient-secondary: linear-gradient(135deg, #D1E9F6 0%, #E8F4FD 100%);
            --shadow-soft: 0 4px 20px rgba(127, 184, 211, 0.15);
            --shadow-medium: 0 8px 30px rgba(127, 184, 211, 0.2);
        }

        /* Body Base */
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.6;
            color: var(--text-dark);
            margin: 0;
            padding: 0;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background: var(--gradient-header);
            backdrop-filter: blur(20px);
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(184, 221, 255, 0.2);
            padding: 1rem 0;
        }

        .nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Logo */
        .logo {
            font-size: 1.8rem;
            font-weight: 800;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            .logo:hover {
                color: var(--primary-blue);
                transform: scale(1.05);
                text-decoration: none;
            }

            .logo i {
                color: var(--primary-blue);
                margin-right: 0.5rem;
                font-size: 2rem;
            }

        /* Navigation Links */
        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
            margin: 0;
            padding: 0;
        }

            .nav-links li a {
                color: rgba(255, 255, 255, 0.95);
                text-decoration: none;
                font-weight: 600;
                padding: 0.75rem 1.25rem;
                border-radius: 12px;
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
            }

                .nav-links li a:hover {
                    background: rgba(255, 255, 255, 0.15);
                    color: white;
                    transform: translateY(-2px);
                    text-decoration: none;
                }

                .nav-links li a.active {
                    background: var(--gradient-secondary);
                    color: var(--text-dark);
                    font-weight: 700;
                }

        /* Auth Buttons */
        .auth-buttons {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .btn-auth {
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border: 2px solid transparent;
            font-size: 0.95rem;
        }

        .btn-login {
            color: white;
            border-color: rgba(255, 255, 255, 0.4);
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

            .btn-login:hover {
                background: rgba(255, 255, 255, 0.2);
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn-register {
            background: var(--gradient-secondary);
            color: var(--text-dark);
            border-color: var(--accent-blue);
            box-shadow: var(--shadow-soft);
        }

            .btn-register:hover {
                background: var(--deep-blue);
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        /* User Dropdown */
        .user-dropdown-toggle {
            color: white !important;
            background: rgba(255, 255, 255, 0.15) !important;
            border: 1px solid rgba(255, 255, 255, 0.3) !important;
            padding: 0.75rem 1rem !important;
            border-radius: 25px !important;
            text-decoration: none !important;
            transition: all 0.3s ease !important;
            font-weight: 600 !important;
            backdrop-filter: blur(10px) !important;
        }

            .user-dropdown-toggle:hover {
                background: rgba(255, 255, 255, 0.25) !important;
                transform: translateY(-2px) !important;
                color: white !important;
            }

        .user-dropdown-menu {
            background: white !important;
            border: none !important;
            border-radius: 15px !important;
            box-shadow: var(--shadow-medium) !important;
            padding: 0.5rem 0 !important;
            margin-top: 0.5rem !important;
            min-width: 220px !important;
        }

            .user-dropdown-menu .dropdown-item {
                padding: 0.75rem 1.5rem !important;
                color: var(--text-dark) !important;
                transition: all 0.3s ease !important;
                display: flex !important;
                align-items: center !important;
                font-weight: 500 !important;
            }

                .user-dropdown-menu .dropdown-item:hover {
                    background: var(--primary-blue) !important;
                    color: var(--deep-blue) !important;
                }

        /* Mobile Menu Toggle */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .mobile-menu-toggle:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        /* Main Content */
        main {
            padding-top: 90px;
            min-height: calc(100vh - 90px);
        }

        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive */
        @@media (max-width: 768px) {
            .nav

        {
            padding: 0 1rem;
        }

        .nav-links {
            position: fixed;
            top: 100%;
            left: 0;
            width: 100%;
            background: var(--gradient-header);
            flex-direction: column;
            padding: 2rem;
            gap: 1rem;
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .nav-links.active {
                transform: translateY(0);
                opacity: 1;
                visibility: visible;
            }

        .mobile-menu-toggle {
            display: block;
        }

        .auth-buttons {
            gap: 0.5rem;
        }

        .btn-auth {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        main {
            padding-top: 80px;
        }

        }

        @@media (max-width: 480px) {
            .nav

        {
            padding: 0 0.75rem;
        }

        .logo {
            font-size: 1.5rem;
        }

            .logo i {
                font-size: 1.7rem;
            }

        .auth-buttons {
            flex-direction: column;
            gap: 0.25rem;
        }

        .btn-auth {
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
        }

        main {
            padding-top: 75px;
        }

        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
    <!-- Component CSS -->
