</head>
<body>

    <!-- Header -->
    <header class="header">
        <nav class="nav">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                <i class="fas fa-film me-2"></i>MovieTheater
            </a>

            <ul class="nav-links">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-home me-1"></i>Trang Chủ
                    </a>
                </li>
                <li>
                    <a asp-area="MovieManagement" asp-controller="Movie" asp-action="viewfilm" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Movie" ? "active" : "")">
                        <i class="fas fa-video me-1"></i>Phim
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-area="UserManagement" asp-controller="Admin" asp-action="Dashboard" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                }
            </ul>

            <div class="auth-buttons">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <a class="btn dropdown-toggle d-flex align-items-center user-dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-2"></i>
                            <span>@User.FindFirst("FullName")?.Value</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="UserManagement" asp-controller="Account" asp-action="UpdateProfile">
                                    <i class="fas fa-user me-2"></i>Thông tin cá nhân
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Booking" asp-controller="Booking" asp-action="History">
                                    <i class="fas fa-history me-2"></i>Lịch sử đặt vé
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Booking" asp-controller="Booking" asp-action="HistoryScore">
                                    <i class="fas fa-history me-2"></i>Lịch sử tích điểm
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form id="logoutForm" asp-area="UserManagement" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-area="UserManagement" asp-controller="Account" asp-action="Login" class="btn-auth btn-login">
                        <i class="fas fa-sign-in-alt"></i>Đăng nhập
                    </a>
                    <a asp-area="UserManagement" asp-controller="Account" asp-action="Register" class="btn-auth btn-register">
                        <i class="fas fa-user-plus"></i>Đăng ký
                    </a>
                }
            </div>

            <button class="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="fade-in">
        @RenderBody()
    </main>

