@{
    var active = ViewData["SidebarActive"] as string ?? "";
}

<style>
    /* Sidebar Navigation Styles */
    .sidebar-navigation {
        padding: 20px 0;
    }

    .nav-section {
        margin-bottom: 35px;
    }

    .nav-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: rgba(255, 255, 255, 0.5);
        padding: 0 20px 10px;
        margin-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-item {
        margin-bottom: 5px;
        position: relative;
    }

    .nav-link {
        display: flex;
        align-items: center;
        padding: 15px 20px;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        border-radius: 0 25px 25px 0;
        margin-right: 15px;
        overflow: hidden;
    }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: transparent;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            text-decoration: none;
            transform: translateX(8px);
        }

            .nav-link:hover::before {
                background: var(--admin-accent);
            }

    .nav-item.active .nav-link {
        background: linear-gradient(135deg, rgba(52, 152, 219, 0.2) 0%, rgba(52, 152, 219, 0.1) 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

        .nav-item.active .nav-link::before {
            background: var(--admin-accent);
            box-shadow: 0 0 10px var(--admin-accent);
        }

    .nav-icon {
        font-size: 1.2rem;
        width: 20px;
        text-align: center;
        margin-right: 15px;
        transition: all 0.3s ease;
    }

    .nav-text {
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .nav-item.active .nav-icon,
    .nav-item.active .nav-text {
        color: white;
    }

    .nav-link:hover .nav-icon {
        transform: scale(1.1);
        color: var(--admin-accent);
    }

    /* Notification Badge */
    .nav-badge {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 2px 6px;
        border-radius: 10px;
        margin-left: auto;
        min-width: 18px;
        text-align: center;
    }

    /* Submenu Styles */
    .nav-submenu {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        background: rgba(0, 0, 0, 0.2);
        margin: 5px 0;
    }

    .nav-item.has-submenu.open .nav-submenu {
        max-height: 200px;
    }

    .nav-submenu .nav-link {
        padding: 10px 20px 10px 55px;
        font-size: 0.9rem;
        margin-right: 0;
        border-radius: 0;
    }

    .nav-submenu .nav-icon {
        font-size: 0.9rem;
        margin-right: 10px;
    }

    .submenu-toggle {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        transition: all 0.3s ease;
    }

    .nav-item.has-submenu.open .submenu-toggle {
        transform: translateY(-50%) rotate(180deg);
    }

    /* User Profile Enhancement */
    .admin-user-profile {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 20px;
        margin: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

        .admin-user-profile:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

    .user-avatar-container {
        position: relative;
        text-align: center;
        margin-bottom: 15px;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 3px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

        .user-avatar:hover {
            border-color: var(--admin-accent);
            transform: scale(1.05);
        }

    .user-status {
        position: absolute;
        bottom: 5px;
        right: calc(50% - 25px);
        width: 12px;
        height: 12px;
        background: #27ae60;
        border-radius: 50%;
        border: 2px solid white;
    }

    .user-info {
        text-align: center;
    }

    .user-name {
        font-weight: 700;
        font-size: 1rem;
        color: white;
        margin-bottom: 5px;
    }

    .user-role {
        font-size: 0.85rem;
        color: var(--admin-accent);
        font-weight: 600;
    }

    /* Sidebar Footer */
    .sidebar-footer {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 20px;
        background: rgba(0, 0, 0, 0.2);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .footer-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: rgba(255, 255, 255, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .footer-btn:hover {
            background: var(--admin-accent);
            color: white;
            transform: translateY(-2px);
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .nav-text

    {
        display: none;
    }

    .nav-link {
        justify-content: center;
        padding: 15px;
        margin-right: 0;
        border-radius: 0;
    }

    .nav-icon {
        margin-right: 0;
    }

    .admin-user-profile {
        padding: 15px 10px;
    }

    .user-avatar {
        width: 45px;
        height: 45px;
    }

    .user-info {
        display: none;
    }

    .nav-section-title {
        display: none;
    }

    }

    /* Active state animation */
    @@keyframes activeGlow {
        0%

    {
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

    50% {
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.5);
    }

    100% {
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

    }

    .nav-item.active .nav-link {
        animation: activeGlow 2s ease-in-out infinite;
    }

    /* Scroll indicator */
    .sidebar-scroll-indicator {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 50px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .admin-sidebar:hover .sidebar-scroll-indicator {
        opacity: 1;
    }

    .scroll-thumb {
        width: 100%;
        background: var(--admin-accent);
        border-radius: 2px;
        transition: all 0.3s ease;
    }
</style>

