    string GetEmbedUrl(string youtubeUrl)
    {
        if (string.IsNullOrEmpty(youtubeUrl)) return "";

        var videoId = "";
        if (youtubeUrl.Contains("watch?v="))
        {
            videoId = youtubeUrl.Split("watch?v=")[1].Split("&")[0];
        }
        else if (youtubeUrl.Contains("youtu.be/"))
