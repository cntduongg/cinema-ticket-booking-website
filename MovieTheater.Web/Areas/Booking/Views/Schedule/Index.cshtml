                    weekDisplay.textContent = `${startStr} - ${endStr}${timeIndicator}`;
                }
            }

            function setupNavigation() {
                const prevBtn = document.getElementById('prevWeek');
                const nextBtn = document.getElementById('nextWeek');
                const todayBtn = document.getElementById('todayBtn');

                if (prevBtn) {
                    prevBtn.addEventListener('click', function() {
                        if (isLoading) return;
                        currentWeekOffset -= 1;
                        initCalendar();
                        showNotification('Chuyển đến tuần trước', 'info');
                    });
                }

                if (nextBtn) {
                    nextBtn.addEventListener('click', function() {
                        if (isLoading) return;
                        currentWeekOffset += 1;
                        initCalendar();
                        showNotification('Chuyển đến tuần sau', 'info');
                    });
                }

                if (todayBtn) {
                    todayBtn.addEventListener('click', function() {
                        if (isLoading) return;
                        currentWeekOffset = 0;
                        initCalendar();
                        showNotification('Quay về tuần hiện tại', 'success');
                    });
                }
            }

            // Enhanced 24-hour time slot generation
            function generate24HourTimeSlots() {
                const slots = [];
                for (let hour = 0; hour < 24; hour++) {
                    slots.push(`${hour.toString().padStart(2, '0')}:00`);
                }
                return slots;
            }

            function createEnhancedCalendarHeader(container, weekDates) {
                const timeHeader = document.createElement('div');
                timeHeader.className = 'time-header';
                timeHeader.innerHTML = '<strong>GIỜ</strong>';
                container.appendChild(timeHeader);

                const dayNames = ['Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7', 'Chủ nhật'];
                const today = new Date();

                weekDates.forEach((date, index) => {
                    const dayHeader = document.createElement('div');
                    dayHeader.className = 'day-header';

                    if (isSameDay(date, today)) {
                        dayHeader.classList.add('today');
                    }

                    if (index >= 5) {
                        dayHeader.classList.add('weekend');
                    }

                    if (date < today && !isSameDay(date, today)) {
                        dayHeader.classList.add('past');
                    }

                    if (date > today && !isSameDay(date, today)) {
                        dayHeader.classList.add('future');
                    }

                    dayHeader.innerHTML = `
                        <div class="day-name">${dayNames[index]}</div>
                        <div class="day-number">${date.getDate()}</div>
                    `;

                    container.appendChild(dayHeader);
                });
            }

            function createEnhanced24HCalendarBody(container, weekDates, timeSlots, scheduleData) {
                timeSlots.forEach(timeSlot => {
                    const timeDiv = document.createElement('div');
                    timeDiv.className = 'time-slot';

                    const hour = parseInt(timeSlot.split(':')[0]);

                    // Add night-time styling for late hours
                    if (hour >= 22 || hour <= 5) {
                        timeDiv.classList.add('night-time');
                    }

                    timeDiv.textContent = timeSlot;
                    container.appendChild(timeDiv);

                    weekDates.forEach(date => {
                        const dayColumn = document.createElement('div');
                        dayColumn.className = 'day-column';

                        const today = new Date();
                        if (date < today && !isSameDay(date, today)) {
                            dayColumn.classList.add('past-day');
                        } else if (date > today && !isSameDay(date, today)) {
                            dayColumn.classList.add('future-day');
                        }

                        // Add night styling for columns
                        if (hour >= 22 || hour <= 5) {
                            dayColumn.classList.add('night-column');
                        }

                        // Get all movies for this precise time slot (including minutes)
                        const movies = getEnhancedMoviesForSlot(scheduleData, date, timeSlot);

                        if (movies.length > 0) {
                            const moviesContainer = document.createElement('div');
                            moviesContainer.className = 'movies-container';

                            if (movies.length > 1) {
                                moviesContainer.classList.add('has-multiple');

                                // Add counter for multiple movies
                                const counter = document.createElement('div');
                                counter.className = 'movie-counter';
                                counter.textContent = movies.length;
                                moviesContainer.appendChild(counter);
                            }

                            movies.forEach((movie, index) => {
                                const movieBlock = createEnhancedMovieBlock(movie, movies.length > 1, index);
                                moviesContainer.appendChild(movieBlock);
                            });

                            dayColumn.appendChild(moviesContainer);
                        }

                        container.appendChild(dayColumn);
                    });
                });
            }

            // Enhanced movie filtering for precise time handling
            function getEnhancedMoviesForSlot(scheduleData, date, timeSlot) {
                const movies = scheduleData.filter(schedule => {
                    let scheduleDate;
                    if (typeof schedule.ShowDate === 'string') {
                        if (schedule.ShowDate.includes('/')) {
                            const parts = schedule.ShowDate.split('/');
                            scheduleDate = new Date(parts[2], parts[1] - 1, parts[0]);
                        } else {
                            scheduleDate = new Date(schedule.ShowDate);
                        }
                    } else {
                        scheduleDate = new Date(schedule.ShowDate);
                    }

                    let scheduleTime = schedule.FromTime;
                    if (typeof scheduleTime === 'string') {
                        if (scheduleTime.includes(':')) {
                            scheduleTime = scheduleTime.substring(0, 5);
                        }
                    }

                    const dateMatch = isSameDay(scheduleDate, date);
                    let timeMatch = false;

                    if (scheduleTime && timeSlot && dateMatch) {
                        const slotHour = parseInt(timeSlot.split(':')[0]);
                        const movieHour = parseInt(scheduleTime.split(':')[0]);

                        // Enhanced time matching - exact hour match
                        if (movieHour === slotHour) {
                            timeMatch = true;
                        }
                    }

                    return dateMatch && timeMatch;
                });

                // Remove duplicates and sort by time
                const uniqueMovies = movies.filter((movie, index, self) =>
                    index === self.findIndex(m =>
                        m.MovieName === movie.MovieName &&
                        m.RoomName === movie.RoomName &&
                        m.FromTime === movie.FromTime &&
                        m.ShowDate === movie.ShowDate
                    )
                );

                // Sort by time (including minutes)
                uniqueMovies.sort((a, b) => {
                    const timeA = a.FromTime || '00:00';
                    const timeB = b.FromTime || '00:00';
                    return timeA.localeCompare(timeB);
                });

                return uniqueMovies;
            }

            function createEnhancedMovieBlock(movie, isStacked, index) {
                const block = document.createElement('div');
                block.className = `movie-block ${getEnhancedGenreClass(movie.MovieName)}`;

                if (isStacked) {
                    block.classList.add('stacked');
                }

                const fromTime = formatEnhancedTime(movie.FromTime);
                const toTime = formatEnhancedTime(movie.ToTime);

                // Check if movie has non-zero minutes
                const hasMinutes = movie.FromTime && movie.FromTime.includes(':') &&
                                  !movie.FromTime.endsWith(':00');

                block.innerHTML = `
                    <div class="movie-title">${movie.MovieName}</div>
                    <div class="movie-details">
                        <span>🕐</span>
                        <span>${fromTime} - ${toTime}</span>
                        ${hasMinutes ? '<span class="time-indicator minute-indicator">📍</span>' : ''}
                    </div>
                    <div class="movie-room">🏛️ ${movie.RoomName}</div>
                `;

                // Enhanced click interaction with ripple effect
                block.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Create enhanced ripple effect
                    createEnhancedRipple(e, this);
                    showEnhancedMovieDetails(movie);
                });

                // Enhanced hover effects
                block.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-4px) scale(1.04)';
                    this.style.zIndex = '20';
                });

                block.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                    this.style.zIndex = '10';
                });

                return block;
            }

            function createEnhancedRipple(event, element) {
                const rect = element.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = event.clientX - rect.left - size / 2;
                const y = event.clientY - rect.top - size / 2;

                const ripple = document.createElement('div');
                ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    background: radial-gradient(circle, rgba(255, 255, 255, 0.6) 0%, transparent 70%);
                    border-radius: 50%;
                    transform: scale(0);
                    animation: ripple 0.8s ease-out;
                    pointer-events: none;
                    z-index: 1000;
                `;

                element.style.position = 'relative';
                element.style.overflow = 'hidden';
                element.appendChild(ripple);

                setTimeout(() => {
                    if (ripple.parentNode) {
                        ripple.parentNode.removeChild(ripple);
                    }
                }, 800);
            }

            function getEnhancedGenreClass(movieName) {
                const name = movieName.toLowerCase();
                if (name.includes('action') || name.includes('fast') || name.includes('mission') || name.includes('hành động') || name.includes('chiến')) return 'movie-action';
                if (name.includes('comedy') || name.includes('funny') || name.includes('hài') || name.includes('cười')) return 'movie-comedy';
                if (name.includes('horror') || name.includes('scary') || name.includes('kinh dị') || name.includes('ma')) return 'movie-horror';
                if (name.includes('romance') || name.includes('love') || name.includes('tình cảm') || name.includes('yêu')) return 'movie-romance';
                if (name.includes('sci-fi') || name.includes('star') || name.includes('space') || name.includes('khoa học') || name.includes('tương lai')) return 'movie-sci-fi';
                if (name.includes('thriller') || name.includes('dark') || name.includes('tâm lý') || name.includes('bí ẩn')) return 'movie-thriller';
                return 'movie-drama';
            }

            function formatEnhancedTime(timeStr) {
                if (typeof timeStr === 'string') {
                    // Handle both HH:mm and HH:mm:ss formats
                    if (timeStr.includes(':')) {
                        const parts = timeStr.split(':');
                        return `${parts[0]}:${parts[1]}`;
                    }
                    return timeStr.substring(0, 5);
                }
                return timeStr;
            }

            function isSameDay(date1, date2) {
                return date1.getFullYear() === date2.getFullYear() &&
                       date1.getMonth() === date2.getMonth() &&
                       date1.getDate() === date2.getDate();
            }

            function showEnhancedMovieDetails(movie) {
                const date = new Date(movie.ShowDate).toLocaleDateString('vi-VN');
                const fromTime = formatEnhancedTime(movie.FromTime);
                const toTime = formatEnhancedTime(movie.ToTime);

                const modal = document.createElement('div');
                modal.className = 'modal-overlay';

                const modalContent = document.createElement('div');
                modalContent.className = 'modal-content';

                modalContent.innerHTML = `
                    <span class="modal-icon">🎬</span>
                    <h3 class="modal-title">${movie.MovieName}</h3>
                    <div class="modal-info">
                        <span>🏛️</span>
                        <span><strong>Phòng:</strong> ${movie.RoomName}</span>
                    </div>
                    <div class="modal-info">
                        <span>📅</span>
                        <span><strong>Ngày:</strong> ${date}</span>
                    </div>
                    <div class="modal-info">
                        <span>🕐</span>
                        <span><strong>Giờ chiếu:</strong> ${fromTime} - ${toTime}</span>
                    </div>
                    <div class="modal-button-container">
                        <button class="modal-close-btn modal-view-room-btn" onclick="viewRoom(${movie.RoomId || 0})">
                            <span>👁️</span>
                            <span>Xem phòng chiếu</span>
                        </button>
                        <button class="modal-close-btn" onclick="closeModal(this)">
                            <span>✖️</span>
                            <span>Đóng</span>
                        </button>
                    </div>
                `;

                modal.appendChild(modalContent);
                document.body.appendChild(modal);

                // Enhanced modal animation
                requestAnimationFrame(() => {
                    modal.style.opacity = '1';
                    modalContent.style.transform = 'translateY(0) scale(1)';
                });

                // Enhanced close handlers
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        closeModal(modal);
                    }
                });

                const handleEscape = function(e) {
                    if (e.key === 'Escape') {
                        closeModal(modal);
                        document.removeEventListener('keydown', handleEscape);
                    }
                };
                document.addEventListener('keydown', handleEscape);
            }

            function closeModal(element) {
                const modal = element.closest ? element.closest('.modal-overlay') : element;
                if (modal) {
                    modal.style.opacity = '0';
                    const modalContent = modal.querySelector('.modal-content');
                    if (modalContent) {
                        modalContent.style.transform = 'translateY(30px) scale(0.95)';
                    }
                    setTimeout(() => {
                        modal.remove();
                    }, 400);
                }
            }

            function viewRoom(roomId) {
                const currentModal = document.querySelector('.modal-overlay');
                if (currentModal) {
                    closeModal(currentModal);
                }

                if (!roomId || roomId === 0) {
                    showNotification('Không tìm thấy thông tin phòng chiếu!', 'error');
                    return;
                }

                showNotification('Đang chuyển đến phòng chiếu...', 'info');

                setTimeout(() => {
                    window.location.href = `/Booking/CinemaRoom/ShowSeats?roomId=${roomId}`;
                }, 1200);
            }



            // Make functions global
            window.viewRoom = viewRoom;
            window.closeModal = closeModal;
            window.initCalendar = initCalendar; // THÊM DÒNG NÀY

            // Initialize everything
            setupNavigation();
            initCalendar();

            // Enhanced keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (isLoading) return;

                switch(e.key) {
                    case 'ArrowLeft':
                        if (!e.ctrlKey) break;
                        e.preventDefault();
                        currentWeekOffset -= 1;
                        initCalendar();
                        break;
                    case 'ArrowRight':
                        if (!e.ctrlKey) break;
                        e.preventDefault();
                        currentWeekOffset += 1;
                        initCalendar();
                        break;
                    case 'Home':
                        if (!e.ctrlKey) break;
                        e.preventDefault();
                        currentWeekOffset = 0;
                        initCalendar();
                        break;
                }
            });

            console.log('✅ Enhanced 24/7 Movie Calendar Ready with Advanced Features');
        });

</script>