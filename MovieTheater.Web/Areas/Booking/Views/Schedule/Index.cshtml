@model List<MovieTheater.Web.Areas.Booking.Models.ScheduleViewModel>
@{
    ViewData["SidebarActive"] = "ScheduleCalendar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<style>
    :root {
        /* Light Theme Color Palette */
        --primary: #8b5cf6;
        --primary-dark: #7c3aed;
        --primary-light: #a855f7;
        --secondary: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        /* New Light Theme Colors */
        --surface: #F9FAFB; /* Nền chính - Trắng ngà */
        --surface-dim: #F4FAF7; /* Cột ngày khác - Trắng/xanh nhạt */
        --surface-accent: #F0F4F8; /* Khung giờ - Xám lạnh nhẹ */
        --header-bg: #E5E0FF; /* Khung tiêu đề - Tím pastel */
        --today-bg: #DFF5E3; /* Cột ngày hiện tại - Xanh mint pastel */
        --movie-card: #D0E8FF; /* Thẻ phim - Xanh dương baby */
        --text-primary: #374151; /* Text - Xám đậm */
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border: #D1D5DB; /* Viền - Xám xanh nhạt */

        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
        --radius: 12px;
        --radius-lg: 20px;
        --radius-xl: 24px;
    }

    body {
        background: #18191a;
        color: #fff;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
    }

    .admin-layout {
        display: flex;
        min-height: 100vh;
    }

    .sidebar-3d {
        height: 100vh;
        flex-shrink: 0;
        z-index: 10;
    }

    .main-content {
        flex: 1;
        overflow-x: auto;
        background: none;
        min-width: 0;
        display: flex;
        flex-direction: column;
    }

    .button-container {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        z-index: 100;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .create-schedule-btn {
        background: var(--primary);
        color: white;
        border: 2px solid var(--primary);
        box-shadow: 0 4px 16px rgba(0,0,0,0.2);
        padding: 1.25rem 2rem;
        border-radius: 24px;
        font-size: 1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        transition: all 0.2s;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        min-width: 200px;
        text-align: center;
    }

        .create-schedule-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .create-schedule-btn:hover::before {
            left: 100%;
        }

        .create-schedule-btn::after {
            content: '';
            position: absolute;
            left: 1.5rem;
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        .create-schedule-btn:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 12px 48px rgba(139, 92, 246, 0.4);
            background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
            color: white
        }

        .create-schedule-btn:active {
            transform: translateY(-2px) scale(1.02);
            transition: all 0.1s ease;
        }

        .create-schedule-btn:hover::after {
            transform: rotate(180deg) scale(1.2);
            color: white;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .button-container {
            bottom: 1rem;
            right: 1rem;
            left: 1rem;
        }

        .create-schedule-btn {
            padding: 1rem 1.5rem;
            font-size: 0.9rem;
            min-width: auto;
            width: 100%;
        }

            .create-schedule-btn::after {
                left: 1rem;
            }
    }

    /* Animation cho hiệu ứng xuất hiện */
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(60px) scale(0.9);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .create-schedule-btn {
        animation: slideInUp 0.6s ease-out 0.5s both;
    }

    /* Pulse effect khi trang load */
    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.3);
        }

        50% {
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.5);
        }
    }

    .create-schedule-btn:nth-child(1) {
        animation: slideInUp 0.6s ease-out 0.5s both, pulse 2s ease-in-out 2s infinite;
    }

    /* Variant khác - nếu muốn nút có style khác */
    .create-schedule-btn.variant-outline {
        background: rgba(255, 255, 255, 0.9);
        color: #8b5cf6;
        border: 2px solid #8b5cf6;
        backdrop-filter: blur(15px);
    }

        .create-schedule-btn.variant-outline:hover {
            background: #8b5cf6;
            color: white;
            border-color: #7c3aed;
        }

    /* Floating badge notification (nếu cần) */
    .create-schedule-btn .notification-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: #ef4444;
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 800;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.3);
    }
    /* Main Container */
    .calendar-page {
        min-height: 100vh;
        padding: 1.5rem;
        max-width: 1800px;
        margin: 0 auto;
    }

    .calendar-container {
        background: var(--surface);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
        border: 1px solid var(--border);
        position: relative;
    }

    /* Enhanced Header Section với Light Theme */
    .calendar-header {
        background: var(--header-bg); /* Tím pastel */
        padding: 2.5rem 2rem;
        position: relative;
        overflow: hidden;
        border-bottom: 2px solid var(--border);
    }

        .calendar-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.08'%3E%3Ccircle cx='30' cy='30' r='3'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
            opacity: 0.3;
        }

    .calendar-title {
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 900;
        color: var(--text-primary); /* Text xám đậm */
        margin: 0 0 2rem 0;
        text-align: center;
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        letter-spacing: -0.025em;
        text-shadow: none;
    }

    .calendar-navigation {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        position: relative;
        z-index: 2;
    }

    .nav-btn {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border: 2px solid var(--border);
        color: var(--text-primary);
        padding: 1rem 1.75rem;
        border-radius: var(--radius);
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: 700;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

        .nav-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(139, 92, 246, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .nav-btn:hover::before {
            left: 100%;
        }

        .nav-btn:hover {
            background: rgba(255, 255, 255, 0.95);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary);
        }

        .nav-btn:active {
            transform: translateY(-1px);
        }

    .today-btn {
        background: var(--primary);
        color: white;
        font-weight: 800;
        border: 2px solid var(--primary);
    }

        .today-btn:hover {
            background: var(--primary-dark);
            border-color: var(--primary-dark);
            box-shadow: var(--shadow-lg);
        }

    .current-week {
        font-size: 1.125rem;
        font-weight: 800;
        padding: 1.25rem 2.5rem;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(15px);
        border: 2px solid var(--border);
        border-radius: var(--radius-lg);
        color: var(--text-primary);
        text-align: center;
        min-width: 320px;
        letter-spacing: 0.5px;
        box-shadow: var(--shadow-sm);
    }

    /* Enhanced Calendar Grid with 24h Support */
    .calendar-grid {
        display: grid;
        grid-template-columns: 120px repeat(7, 1fr);
        background: var(--surface);
        position: relative;
        max-height: 85vh;
        overflow-y: auto;
        scroll-behavior: smooth;
    }

    /* Improved Time Header với Light Theme */
    .time-header {
        background: var(--surface-accent); /* Xám lạnh nhẹ */
        border-right: 2px solid var(--border);
        border-bottom: 2px solid var(--border);
        padding: 2rem 1rem;
        text-align: center;
        font-weight: 800;
        font-size: 0.875rem;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        position: sticky;
        top: 0;
        z-index: 20;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: var(--shadow-sm);
    }

    /* Enhanced Day Headers với Light Theme */
    .day-header {
        background: var(--surface-accent); /* Xám lạnh nhẹ mặc định */
        border-right: 1px solid var(--border);
        border-bottom: 2px solid var(--border);
        padding: 2rem 1rem;
        text-align: center;
        font-weight: 800;
        color: var(--text-primary);
        position: sticky;
        top: 0;
        z-index: 15;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: var(--shadow-sm);
    }

        .day-header:last-child {
            border-right: none;
        }

        .day-header:hover {
            background: var(--surface-dim);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .day-header.today {
            background: var(--today-bg); /* Xanh mint pastel */
            color: var(--text-primary);
            box-shadow: var(--shadow-md);
            border: 2px solid #10b981;
        }

        .day-header.weekend {
            background: #FEF3F2; /* Hồng nhạt cho cuối tuần */
            color: var(--text-primary);
            border: 1px solid #FECACA;
        }

        .day-header.past {
            background: #F9FAFB; /* Xám nhạt cho ngày qua */
            color: var(--text-secondary);
            opacity: 0.8;
        }

        .day-header.future {
            background: var(--surface-dim); /* Xanh nhạt cho tương lai */
            color: var(--text-primary);
        }

    .day-name {
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.9;
        font-weight: 700;
    }

    .day-number {
        font-size: 1.75rem;
        font-weight: 900;
        line-height: 1;
    }

    /* Enhanced Time Slots for 24h với Light Theme */
    .time-slot {
        background: var(--surface-accent); /* Xám lạnh nhẹ */
        border-right: 2px solid var(--border);
        border-bottom: 1px solid var(--border);
        padding: 1.25rem 0.75rem;
        color: var(--text-secondary);
        font-size: 0.75rem;
        font-weight: 700;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 120px;
        position: relative;
        transition: all 0.3s ease;
    }

        .time-slot:hover {
            background: var(--surface-dim);
            color: var(--text-primary);
        }

        .time-slot.night-time {
            background: #F1F5F9; /* Xám nhạt hơn cho giờ đêm */
            color: var(--text-secondary);
            border-color: var(--border);
        }

            .time-slot.night-time:hover {
                background: #E2E8F0;
                color: var(--text-primary);
            }

        .time-slot::after {
            content: '';
            position: absolute;
            right: 0;
            top: 25%;
            bottom: 25%;
            width: 3px;
            background: linear-gradient(to bottom, transparent, var(--primary), transparent);
            opacity: 0.4;
            border-radius: 2px;
        }

    /* Enhanced Day Columns với Light Theme */
    .day-column {
        border-right: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
        min-height: 120px;
        position: relative;
        background: var(--surface); /* Trắng ngà */
        padding: 0.75rem;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        overflow: visible;
    }

        .day-column:last-child {
            border-right: none;
        }

        .day-column.past-day {
            background: #F9FAFB; /* Xám nhạt cho ngày qua */
            opacity: 0.8;
        }

        .day-column.future-day {
            background: var(--surface-dim); /* Xanh nhạt cho tương lai */
        }

        .day-column.night-column {
            background: #F8FAFC; /* Xám rất nhạt cho giờ đêm */
            border-color: var(--border);
        }

        .day-column:hover {
            background: #EEF2FF; /* Tím nhạt khi hover */
            transform: scale(1.02);
            z-index: 5;
            box-shadow: var(--shadow-lg);
            border-radius: var(--radius);
        }

    /* Multi-Movie Container */
    .movies-container {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
        width: 100%;
        min-height: 100%;
    }

        .movies-container.has-multiple {
            max-height: 110px;
            overflow-y: auto;
            padding-right: 2px;
        }

            .movies-container.has-multiple::-webkit-scrollbar {
                width: 3px;
            }

            .movies-container.has-multiple::-webkit-scrollbar-track {
                background: rgba(139, 92, 246, 0.1);
                border-radius: 2px;
            }

            .movies-container.has-multiple::-webkit-scrollbar-thumb {
                background: var(--primary);
                border-radius: 2px;
            }

    /* Enhanced Movie Blocks với Light Theme */
    .movie-block {
        background: var(--movie-card); /* Xanh dương baby */
        color: var(--text-primary); /* Text xám đậm */
        padding: 0.875rem;
        border-radius: var(--radius);
        font-size: 0.75rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow-sm);
        overflow: hidden;
        position: relative;
        border: 2px solid rgba(139, 92, 246, 0.15);
        backdrop-filter: blur(5px);
        flex-shrink: 0;
    }

        .movie-block::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(139, 92, 246, 0.1), transparent);
            transition: left 0.6s ease;
        }

        .movie-block:hover::before {
            left: 100%;
        }

        .movie-block:hover {
            transform: translateY(-3px) scale(1.03);
            box-shadow: var(--shadow-lg);
            z-index: 15;
            border-color: var(--primary);
            background: #BFDBFE; /* Xanh dương nhạt hơn khi hover */
        }

        .movie-block:active {
            transform: translateY(-1px) scale(1.01);
        }

        /* Stacked Movie Block */
        .movie-block.stacked {
            margin-bottom: 0.25rem;
            font-size: 0.625rem;
            padding: 0.625rem 0.75rem;
            min-height: auto;
        }

            .movie-block.stacked:last-child {
                margin-bottom: 0;
            }

    .movie-title {
        font-weight: 800;
        margin-bottom: 0.75rem;
        font-size: 0.8rem;
        line-height: 1.3;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .movie-block.stacked .movie-title {
        font-size: 0.675rem;
        margin-bottom: 0.5rem;
        -webkit-line-clamp: 1;
    }

    .movie-details {
        font-size: 0.625rem;
        opacity: 0.95;
        display: flex;
        align-items: center;
        gap: 0.375rem;
        margin-bottom: 0.5rem;
        flex-wrap: wrap;
    }

    .movie-block.stacked .movie-details {
        font-size: 0.5rem;
        margin-bottom: 0.25rem;
        gap: 0.25rem;
    }

    .movie-room {
        background: rgba(139, 92, 246, 0.15); /* Tím nhạt */
        color: var(--text-primary);
        padding: 0.25rem 0.625rem;
        border-radius: 20px;
        display: inline-block;
        font-size: 0.625rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    .movie-block.stacked .movie-room {
        font-size: 0.5rem;
        padding: 0.125rem 0.5rem;
    }

    /* Genre-based Colors Enhanced với Light Theme */
    .movie-action {
        background: #FEE2E2; /* Đỏ nhạt */
        border-color: #FECACA;
        color: #7F1D1D;
    }

        .movie-action:hover {
            background: #FCA5A5;
            border-color: #F87171;
        }

    .movie-comedy {
        background: #FEF3C7; /* Vàng nhạt */
        border-color: #FDE68A;
        color: #92400E;
    }

        .movie-comedy:hover {
            background: #FCD34D;
            border-color: #F59E0B;
        }

    .movie-drama {
        background: #DBEAFE; /* Xanh dương nhạt */
        border-color: #BFDBFE;
        color: #1E3A8A;
    }

        .movie-drama:hover {
            background: #93C5FD;
            border-color: #60A5FA;
        }

    .movie-horror {
        background: #F3F4F6; /* Xám nhạt */
        border-color: #D1D5DB;
        color: #374151;
    }

        .movie-horror:hover {
            background: #E5E7EB;
            border-color: #9CA3AF;
        }

    .movie-romance {
        background: #FCE7F3; /* Hồng nhạt */
        border-color: #F9A8D4;
        color: #BE185D;
    }

        .movie-romance:hover {
            background: #F472B6;
            border-color: #EC4899;
        }

    .movie-sci-fi {
        background: #ECFDF5; /* Xanh lá nhạt */
        border-color: #A7F3D0;
        color: #065F46;
    }

        .movie-sci-fi:hover {
            background: #6EE7B7;
            border-color: #34D399;
        }

    .movie-thriller {
        background: #EDE9FE; /* Tím nhạt */
        border-color: #C4B5FD;
        color: #5B21B6;
    }

        .movie-thriller:hover {
            background: #A78BFA;
            border-color: #8B5CF6;
        }

    /* Multi-Movie Counter với Light Theme */
    .movie-counter {
        position: absolute;
        top: -8px;
        right: -8px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 800;
        border: 2px solid var(--surface);
        box-shadow: var(--shadow-md);
        z-index: 20;
    }

    /* Enhanced Modal với Light Theme */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-content {
        background: var(--surface);
        padding: 3rem 2.5rem;
        border-radius: var(--radius-xl);
        max-width: 520px;
        width: 90%;
        box-shadow: var(--shadow-xl);
        text-align: center;
        transform: translateY(30px) scale(0.95);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid var(--border);
        position: relative;
        overflow: hidden;
    }

        .modal-content::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--primary);
        }

    .modal-icon {
        font-size: 3.5rem;
        margin-bottom: 2rem;
        display: block;
        filter: none;
    }

    .modal-title {
        color: var(--text-primary);
        margin-bottom: 2rem;
        font-size: 1.75rem;
        font-weight: 800;
        line-height: 1.2;
    }

    .modal-info {
        color: var(--text-secondary);
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        font-size: 1rem;
        padding: 1rem 1.5rem;
        background: var(--surface-accent);
        border-radius: var(--radius);
        font-weight: 600;
