@model MovieTheater.Web.Areas.Booking.Models.Promotion
@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["SidebarActive"] = "PromotionManagement";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post" id="editPromotionForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="PromotionId" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-tag"></i> Tiêu đề khuyến mãi <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề khuyến mãi..." maxlength="200" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Detail" class="form-label">
                                <i class="fas fa-align-left"></i> Mô tả chi tiết <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Detail" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về khuyến mãi..." maxlength="1000" required></textarea>
                            <span asp-validation-for="Detail" class="text-danger"></span>
                            <small class="form-text text-muted">Tối đa 1000 ký tự</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DiscountLevel" class="form-label">
                                <i class="fas fa-percent"></i> Mức giảm giá (%) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="DiscountLevel" class="form-control" type="number"
                                       step="0.01" min="0.01" max="100" placeholder="0.00" required />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="DiscountLevel" class="text-danger"></span>
                            <small class="form-text text-muted">Nhập số từ 0.01 đến 100</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartTime" class="form-label">
                                        <i class="fas fa-calendar-start"></i> Ngày bắt đầu <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="StartTime" class="form-control" type="datetime-local" required />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndTime" class="form-label">
                                        <i class="fas fa-calendar-times"></i> Ngày kết thúc <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="EndTime" class="form-control" type="datetime-local" required />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    <i class="fas fa-toggle-on"></i> Kích hoạt khuyến mãi
                                </label>
                            </div>
                            <small class="form-text text-muted">Bỏ tick để tạm dừng khuyến mãi</small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.PromotionId" class="btn btn-info">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle"></i> Thông tin
                    </h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-history"></i> Thông tin khuyến mãi:</h6>
                    <ul class="list-unstyled">
                        <li><strong>ID:</strong> @Model.PromotionId</li>
                        <li>
                            <strong>Trạng thái:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Tạm dừng</span>
                            }
                        </li>
                    </ul>

                    <hr>

                    <h6><i class="fas fa-lightbulb"></i> Lưu ý khi chỉnh sửa:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Kiểm tra lại thời gian hiệu lực</li>
                        <li><i class="fas fa-check text-success"></i> Đảm bảo mức giảm giá hợp lý</li>
                        <li><i class="fas fa-check text-success"></i> Cập nhật mô tả nếu cần</li>
                        <li><i class="fas fa-check text-success"></i> Có thể tạm dừng để chỉnh sửa</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            console.log('Edit promotion form initialized');

            // Convert datetime to local format for inputs
            convertDateTimeToLocal();

            // Form validation
            $('#editPromotionForm').on('submit', function(e) {
                console.log('Form submitting...');

                const startTime = new Date($('#StartTime').val());
                const endTime = new Date($('#EndTime').val());

                if (startTime >= endTime) {
                    e.preventDefault();
                    showAlert('danger', 'Ngày kết thúc phải sau ngày bắt đầu!');
                    return false;
                }

                const discountLevel = parseFloat($('#DiscountLevel').val());
                if (discountLevel <= 0 || discountLevel > 100) {
                    e.preventDefault();
                    showAlert('danger', 'Mức giảm giá phải từ 0.01 đến 100!');
                    return false;
                }

                const title = $('#Title').val().trim();
                if (!title) {
                    e.preventDefault();
                    showAlert('danger', 'Tiêu đề không được để trống!');
                    return false;
                }

                const detail = $('#Detail').val().trim();
                if (!detail) {
                    e.preventDefault();
                    showAlert('danger', 'Mô tả không được để trống!');
                    return false;
                }

                // Show loading
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Đang cập nhật...');

                console.log('Edit form validation passed, submitting...');
                return true;
            });

            // Character counters
            $('#Title').on('input', function() {
                const remaining = 200 - $(this).val().length;
                updateCharCounter(this, remaining);
            });

            $('#Detail').on('input', function() {
                const remaining = 1000 - $(this).val().length;
                updateCharCounter(this, remaining);
            });

            // Trigger initial character count
            $('#Title').trigger('input');
            $('#Detail').trigger('input');
        });

        function convertDateTimeToLocal() {
            // Convert StartTime and EndTime to local datetime-local format
            const startInput = document.getElementById('StartTime');
            const endInput = document.getElementById('EndTime');

            if (startInput.value) {
                const startDate = new Date(startInput.value);
                startInput.value = startDate.toISOString().slice(0, 16);
            }

            if (endInput.value) {
                const endDate = new Date(endInput.value);
                endInput.value = endDate.toISOString().slice(0, 16);
            }
        }

        function updateCharCounter(input, remaining) {
            let counter = $(input).siblings('.char-counter');
            if (counter.length === 0) {
                counter = $('<small class="char-counter text-muted"></small>');
                $(input).after(counter);
            }

            counter.text(`Còn lại: ${remaining} ký tự`);
            counter.toggleClass('text-danger', remaining < 0);
        }

        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('.card-body').prepend(alertHtml);

            // Auto dismiss after 5 seconds
            setTimeout(() => {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}