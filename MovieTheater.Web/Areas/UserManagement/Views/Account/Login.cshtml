@model MovieTheater.Web.Areas.UserManagement.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <style>
        /* ===== LOGIN PAGE - HOMEPAGE THEME ===== */
        
        /* Root Variables */
        :root {
            --primary-blue: #E8F4FD;
            --secondary-blue: #D1E9F6;
            --accent-blue: #B8DDFF;
            --deep-blue: #7FB8D3;
            --dark-blue: #4A90A4;
            --text-dark: #1A365D;
            --text-light: #4A5568;
            --white: #FFFFFF;
            --gray-50: #F7FAFC;
            --gray-100: #EDF2F7;
            --gray-200: #E2E8F0;
            --red-accent: #FF6B7A;
            --green-accent: #48BB78;
            --gradient-primary: linear-gradient(135deg, #E8F4FD 0%, #B8DDFF 50%, #7FB8D3 100%);
            --gradient-brand: linear-gradient(135deg, #7FB8D3 0%, #4A90A4 100%);
            --shadow-soft: 0 4px 20px rgba(127, 184, 211, 0.15);
            --shadow-medium: 0 8px 30px rgba(127, 184, 211, 0.2);
            --shadow-strong: 0 15px 40px rgba(127, 184, 211, 0.3);
        }

        /* Main Container */
        .login-page-container {
            min-height: calc(100vh - 90px);
            background: var(--gradient-primary);
            padding: 2rem 1rem;
            position: relative;
            overflow: hidden;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        /* Background Animation */
        .login-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .cinema-element {
            position: absolute;
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(127, 184, 211, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgba(127, 184, 211, 0.6);
            font-size: 2rem;
            animation: float 10s ease-in-out infinite;
            backdrop-filter: blur(10px);
        }

        .element-1 {
            top: 10%;
            left: 8%;
            animation-delay: 0s;
        }

        .element-2 {
            top: 70%;
            right: 10%;
            animation-delay: 3s;
        }

        .element-3 {
            bottom: 15%;
            left: 15%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg) scale(1);
                opacity: 0.6;
            }
            33% {
                transform: translateY(-20px) rotate(120deg) scale(1.1);
                opacity: 0.8;
            }
            66% {
                transform: translateY(20px) rotate(240deg) scale(0.9);
                opacity: 0.4;
            }
        }

        /* Main Content */
        .login-content {
            position: relative;
            z-index: 10;
        }

        /* Login Wrapper */
        .login-wrapper {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            overflow: hidden;
            border: 2px solid rgba(184, 221, 255, 0.4);
            box-shadow: var(--shadow-strong);
            display: grid;
            grid-template-columns: 1fr 1fr;
            min-height: 600px;
            max-width: 1000px;
            margin: 0 auto;
            animation: slideUp 0.8s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(60px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Brand Side */
        .brand-side {
            background: var(--gradient-brand);
            padding: 3rem 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .brand-side::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: rotate 30s linear infinite;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .brand-content {
            text-align: center;
            color: white;
            position: relative;
            z-index: 2;
        }

        .brand-logo {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin: 0 auto 2rem;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            animation: pulse 4s ease-in-out infinite;
            color: var(--primary-blue);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .brand-content h2 {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
            line-height: 1.2;
        }

        .brand-content p {
            font-size: 1.1rem;
            margin-bottom: 2.5rem;
            opacity: 0.95;
            line-height: 1.6;
            font-weight: 400;
        }

        .features-highlight {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-size: 1rem;
            opacity: 0.95;
            padding: 0.5rem 0;
        }

        .feature-item i {
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: var(--primary-blue);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Form Side */
        .form-side {
            padding: 3rem 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
        }

        .form-container {
            width: 100%;
            max-width: 380px;
        }

        /* Form Header */
        .form-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .form-header h3 {
            color: var(--text-dark);
            font-size: 1.9rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }

        .form-header p {
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 400;
        }

        /* Alert Messages */
        .alert {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            font-weight: 500;
            animation: slideDown 0.4s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-success {
            background: rgba(72, 187, 120, 0.1);
            color: var(--green-accent);
            border: 2px solid rgba(72, 187, 120, 0.2);
        }

        .alert-danger {
            background: rgba(255, 107, 122, 0.1);
            color: var(--red-accent);
            border: 2px solid rgba(255, 107, 122, 0.2);
        }

        /* Form Styles */
        .login-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-dark);
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .form-label i {
            color: var(--deep-blue);
            font-size: 0.9rem;
        }

        /* Input Groups */
        .input-group {
            position: relative;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .input-group.focused {
            transform: translateY(-2px);
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1.1rem;
            z-index: 5;
            transition: all 0.3s ease;
        }

        .input-group.focused .input-icon {
            color: var(--deep-blue);
            transform: translateY(-50%) scale(1.1);
        }

        /* Form Controls */
        .form-control {
            width: 100%;
            background: var(--gray-50);
            border: 2px solid var(--gray-200);
            border-radius: 16px;
            padding: 1rem 3.5rem 1rem 3rem;
            color: var(--text-dark);
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
            box-shadow: none;
            font-family: inherit;
        }

        .form-control:focus {
            border-color: var(--deep-blue);
            background: white;
            box-shadow: 0 0 0 4px rgba(127, 184, 211, 0.15);
            transform: scale(1.01);
        }

        .form-control::placeholder {
            color: var(--text-light);
            font-style: italic;
            font-weight: 400;
        }

        /* Password Toggle */
        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            font-size: 1.1rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            z-index: 5;
        }

        .password-toggle:hover {
            color: var(--deep-blue);
            background: rgba(127, 184, 211, 0.1);
            transform: translateY(-50%) scale(1.1);
        }

        /* Form Options */
        .form-options {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin: -0.5rem 0 1rem;
        }

        .forgot-link {
            color: var(--text-light);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            padding: 0.25rem 0.5rem;
            border-radius: 8px;
        }

        .forgot-link:hover {
            color: var(--deep-blue);
            text-decoration: none;
            background: rgba(127, 184, 211, 0.1);
        }

        /* Login Button */
        .btn-login {
            background: var(--gradient-brand);
            color: white;
            /* border: none;
            border-radius: 16px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            box-shadow: var(--shadow-medium);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 0.5rem; */
        }

        .btn-login:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: var(--shadow-strong);
            background: linear-gradient(135deg, #4A90A4 0%, #7FB8D3 100%);
        }

        .btn-login:active:not(:disabled) {
            transform: translateY(-1px);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .btn-login.loading span {
            opacity: 0;
        }

        .btn-loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .btn-login.loading .btn-loading {
            opacity: 1;
        }

        /* Form Footer */
        .form-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 2px solid var(--gray-100);
        }

        .form-footer p {
            color: var(--text-light);
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
            font-weight: 500;
        }

        .register-link {
            color: var(--deep-blue);
            text-decoration: none;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 12px;
            background: rgba(127, 184, 211, 0.1);
        }

        .register-link:hover {
            color: var(--dark-blue);
            text-decoration: none;
            transform: translateY(-2px);
            background: rgba(127, 184, 211, 0.2);
            box-shadow: var(--shadow-soft);
        }

        /* Validation Styles */
        .text-danger {
            color: var(--red-accent);
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
        }

        .text-danger::before {
            content: '⚠';
            font-size: 1rem;
        }

        .field-validation-error {
            color: var(--red-accent);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }

        .input-validation-error {
            border-color: var(--red-accent);
            box-shadow: 0 0 0 4px rgba(255, 107, 122, 0.15);
            background: rgba(255, 107, 122, 0.05);
        }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            .login-wrapper {
                grid-template-columns: 1fr;
                max-width: 500px;
                margin: 1rem auto;
            }

            .brand-side {
                padding: 2rem 1.5rem;
            }

            .form-side {
                padding: 2rem 1.5rem;
            }

            .features-highlight {
                flex-direction: row;
                justify-content: space-around;
                gap: 1rem;
            }

            .feature-item {
                flex-direction: column;
                text-align: center;
                gap: 0.5rem;
                font-size: 0.9rem;
            }

            .feature-item i {
                width: 40px;
                height: 40px;
                font-size: 1rem;
            }
        }

        @@media (max-width: 768px) {
            .login-page-container {
                padding: 1rem 0.5rem;
                min-height: calc(100vh - 75px);
            }

            .brand-side,
            .form-side {
                padding: 1.5rem 1rem;
            }

            .brand-content h2 {
                font-size: 1.8rem;
            }

            .form-header h3 {
                font-size: 1.6rem;
            }

            .features-highlight {
                flex-direction: column;
                gap: 1rem;
            }

            .feature-item {
                flex-direction: row;
                justify-content: flex-start;
                text-align: left;
            }

            .form-options {
                justify-content: center;
            }

            .cinema-element {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }
        }

        @@media (max-width: 480px) {
            .form-control {
                padding: 0.875rem 3rem 0.875rem 2.5rem;
                font-size: 0.95rem;
            }

            .btn-login {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }

            .brand-content h2 {
                font-size: 1.6rem;
            }

            .brand-logo {
                width: 80px;
                height: 80px;
                font-size: 2rem;
            }

            .input-icon {
                left: 0.75rem;
                font-size: 1rem;
            }

            .password-toggle {
                right: 0.75rem;
                font-size: 1rem;
            }
        }

        /* Focus and Accessibility */
        .btn-login:focus-visible,
        .form-control:focus-visible,
        .password-toggle:focus-visible,
        .forgot-link:focus-visible,
        .register-link:focus-visible {
            outline: 3px solid var(--deep-blue);
            outline-offset: 2px;
        }

        /* Additional Enhancements */
        .form-control:focus {
            animation: inputGlow 0.3s ease;
        }

        @@keyframes inputGlow {
            0% { box-shadow: 0 0 0 0 rgba(127, 184, 211, 0.4); }
            50% { box-shadow: 0 0 0 6px rgba(127, 184, 211, 0.2); }
            100% { box-shadow: 0 0 0 4px rgba(127, 184, 211, 0.15); }
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .btn-login:active::before {
            width: 300px;
            height: 300px;
        }
    </style>
}

<div class="login-page-container">
    <!-- Background Animation -->
    <div class="login-background">
        <div class="cinema-element element-1">
            <i class="fas fa-film"></i>
        </div>
        <div class="cinema-element element-2">
            <i class="fas fa-video"></i>
        </div>
        <div class="cinema-element element-3">
            <i class="fas fa-camera"></i>
        </div>
    </div>

    <!-- Main Login Content -->
    <div class="login-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">
                    <div class="login-wrapper">
                        <!-- Left Side - Brand Info -->
                        <div class="brand-side">
                            <div class="brand-content">
                                <div class="brand-logo">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                <h2>Chào mừng trở lại!</h2>
                                <p>Đăng nhập để trải nghiệm những bộ phim tuyệt vời nhất</p>

                                <div class="features-highlight">
                                    <div class="feature-item">
                                        <i class="fas fa-star"></i>
                                        <span>Đặt vé nhanh chóng</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-crown"></i>
                                        <span>Ưu đãi thành viên</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Lịch chiếu linh hoạt</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side - Login Form -->
                        <div class="form-side">
                            <div class="form-container">
                                <!-- Form Header -->
                                <div class="form-header">
                                    <h3>Đăng nhập tài khoản</h3>
                                    <p>Nhập thông tin để truy cập tài khoản</p>
                                </div>

                                <!-- Alert Messages -->
                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        @TempData["Error"]
                                    </div>
                                }
                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle"></i>
                                        @TempData["Success"]
                                    </div>
                                }

                                <!-- Login Form -->
                                <form asp-action="Login" method="post" autocomplete="off" class="login-form">
                                    @Html.AntiForgeryToken()

                                    <!-- Username Field -->
                                    <div class="form-group">
                                        <label asp-for="Account" class="form-label">
                                            <i class="fas fa-user"></i>
                                            Tài khoản
                                        </label>
                                        <div class="input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-user-circle"></i>
                                            </div>
                                            <input asp-for="Account" class="form-control"
                                                   placeholder="Nhập tài khoản của bạn"
                                                   autocomplete="username" />
                                        </div>
                                        <span asp-validation-for="Account" class="text-danger"></span>
                                    </div>

                                    <!-- Password Field -->
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">
                                            <i class="fas fa-lock"></i>
                                            Mật khẩu
                                        </label>
                                        <div class="input-group">
                                            <div class="input-icon">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <input asp-for="Password" class="form-control" type="password"
                                                   placeholder="Nhập mật khẩu của bạn"
                                                   autocomplete="current-password" />
                                            <button type="button" class="password-toggle" onclick="togglePassword(this)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Remember Me & Forgot Password -->
                                    <div class="form-options">

                                        <a href="#" class="forgot-link">
                                            <i class="fas fa-question-circle"></i>
                                            Quên mật khẩu?
                                        </a>
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn-login">
                                        <i class="fas fa-sign-in-alt"></i>
                                        <span>Đăng nhập</span>
                                        <div class="btn-loading">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </button>
                                </form>

                                <!-- Register Link -->
                                <div class="form-footer">
                                    <p>Chưa có tài khoản?</p>
                                    <a asp-action="Register" class="register-link">
                                        <i class="fas fa-user-plus"></i>
                                        Đăng ký ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Password toggle functionality
        function togglePassword(button) {
            const input = button.parentElement.querySelector('.form-control');
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Form enhancement
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.closest('.input-group').classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.closest('.input-group').classList.remove('focused');

                    if (this.value.trim() !== '') {
                        this.closest('.input-group').classList.add('has-value');
                    } else {
                        this.closest('.input-group').classList.remove('has-value');
                    }
                });

                // Check initial values
                if (input.value.trim() !== '') {
                    input.closest('.input-group').classList.add('has-value');
                }
            });

            // Form submission with loading state
            const form = document.querySelector('.login-form');
            const submitBtn = document.querySelector('.btn-login');

            form.addEventListener('submit', function(e) {
                submitBtn.classList.add('loading');
                submitBtn.disabled = true;
            });

            // Animate cinema elements
            const elements = document.querySelectorAll('.cinema-element');
            elements.forEach((element, index) => {
                element.style.animationDelay = `${index * 0.5}s`;
