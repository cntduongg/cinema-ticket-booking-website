            --primary-blue: #E8F4FD;
            --secondary-blue: #D1E9F6;
            --accent-blue: #B8DDFF;
            --deep-blue: #7FB8D3;
            --dark-blue: #4A90A4;
            --text-dark: #1A365D;
            --text-light: #4A5568;
            --white: #FFFFFF;
            --gray-50: #F7FAFC;
            --gray-100: #EDF2F7;
            --gray-200: #E2E8F0;
            --red-accent: #FF6B7A;
            --green-accent: #48BB78;
            --yellow-accent: #F6E05E;
