            backdrop-filter: blur(10px);
        }

        .element-2 {
            top: 20%;
            right: 15%;
            animation-delay: 0s;
        }

        .element-3 {
            top: 60%;
            left: 10%;
            animation-delay: 4s;
        }

        .element-4 {
            bottom: 25%;
            right: 20%;
            animation-delay: 8s;
        }

        @@keyframes movieFloat {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg) scale(1);
            opacity: 0.7;
        }

        25% {
            transform: translateY(-15px) rotate(90deg) scale(1.1);
            opacity: 0.9;
        }

        50% {
            transform: translateY(10px) rotate(180deg) scale(0.9);
            opacity: 0.5;
        }

        75% {
            transform: translateY(-20px) rotate(270deg) scale(1.05);
            opacity: 0.8;
        }

        }

        /* Main Content */
        .register-content {
            position: relative;
            z-index: 10;
        }

        /* Register Wrapper */
        .register-wrapper {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 3rem 2.5rem;
            border: 2px solid rgba(184, 221, 255, 0.4);
            box-shadow: var(--shadow-strong);
            max-width: 900px;
            margin: 0 auto;
            animation: slideUp 0.8s ease-out;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(60px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        /* Register Header */
        .register-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .header-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-brand);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 1.5rem;
            color: white;
            box-shadow: var(--shadow-medium);
            animation: pulse 3s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .register-header h2 {
            color: var(--text-dark);
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.75rem;
            line-height: 1.3;
        }

        .register-header p {
            color: var(--text-light);
            font-size: 1.1rem;
            font-weight: 400;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Alert Messages */
        .alert {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            font-size: 0.9rem;
            font-weight: 500;
            animation: slideDown 0.4s ease-out;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .alert-success {
            background: rgba(72, 187, 120, 0.1);
            color: var(--green-accent);
            border: 2px solid rgba(72, 187, 120, 0.2);
        }

        .alert-danger {
            background: rgba(255, 107, 122, 0.1);
            color: var(--red-accent);
            border: 2px solid rgba(255, 107, 122, 0.2);
        }

        /* Form Sections */
        .form-section {
            margin-bottom: 2.5rem;
            padding: 2rem;
            background: rgba(247, 250, 252, 0.7);
            border-radius: 16px;
            border: 1px solid rgba(184, 221, 255, 0.2);
        }

        .section-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid rgba(127, 184, 211, 0.2);
        }

            .section-title i {
                width: 40px;
                height: 40px;
                background: var(--gradient-brand);
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 1.1rem;
            }

            .section-title h4 {
                color: var(--text-dark);
                font-size: 1.3rem;
                font-weight: 700;
                margin: 0;
            }

        /* Form Grid */
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        /* Form Groups */
        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-dark);
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

            .form-label i {
                color: var(--deep-blue);
                font-size: 0.9rem;
            }

        .required {
            color: var(--red-accent);
            font-weight: 700;
        }

        /* Input Groups */
        .input-group, .select-group {
            position: relative;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .input-group.focused, .select-group.focused {
                transform: translateY(-2px);
            }

            .input-group.error {
                animation: shake 0.5s ease-in-out;
            }

        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }

        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1.1rem;
            z-index: 5;
            transition: all 0.3s ease;
        }

        .input-group.focused .input-icon,
        .select-group.focused .input-icon {
            color: var(--deep-blue);
            transform: translateY(-50%) scale(1.1);
        }

        /* Form Controls */
        .form-control, .form-select {
            width: 100%;
            background: var(--gray-50);
            border: 2px solid var(--gray-200);
            border-radius: 12px;
            padding: 0.875rem 3.5rem 0.875rem 3rem;
            color: var(--text-dark);
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
            box-shadow: none;
            font-family: inherit;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--deep-blue);
                background: white;
                box-shadow: 0 0 0 4px rgba(127, 184, 211, 0.15);
                transform: scale(1.01);
            }

            .form-control::placeholder {
                color: var(--text-light);
                font-style: italic;
                font-weight: 400;
            }

        /* Select Styling */
        .select-group {
            position: relative;
        }

        .form-select {
            appearance: none;
            cursor: pointer;
        }

        .select-arrow {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 0.9rem;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .select-group.focused .select-arrow {
            color: var(--deep-blue);
            transform: translateY(-50%) rotate(180deg);
        }

        /* Password Toggle */
        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            font-size: 1.1rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            z-index: 5;
        }

            .password-toggle:hover {
                color: var(--deep-blue);
                background: rgba(127, 184, 211, 0.1);
                transform: translateY(-50%) scale(1.1);
            }

        /* Password Strength */
        .password-strength {
            margin-top: 0.75rem;
        }

        .strength-bar {
            width: 100%;
            height: 6px;
            background: var(--gray-200);
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 3px;
        }

            .strength-fill.weak {
                background: var(--red-accent);
            }

            .strength-fill.medium {
                background: var(--yellow-accent);
            }

            .strength-fill.strong {
                background: var(--deep-blue);
            }

            .strength-fill.very-strong {
                background: var(--green-accent);
            }

        .strength-text {
            font-size: 0.85rem;
            color: var(--text-light);
            font-weight: 500;
        }

        /* Terms Section */
        .terms-section {
            margin: 2rem 0;
            padding: 1.5rem;
            background: rgba(232, 244, 253, 0.3);
            border-radius: 12px;
            border: 1px solid rgba(184, 221, 255, 0.3);
        }

        .terms-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

            .terms-checkbox input[type="checkbox"] {
                display: none;
            }

        .checkmark {
            width: 24px;
            height: 24px;
            background: white;
            border: 2px solid var(--gray-200);
            border-radius: 6px;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
            flex-shrink: 0;
            margin-top: 2px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .terms-checkbox input:checked + label .checkmark {
            background: var(--deep-blue);
            border-color: var(--deep-blue);
            transform: scale(1.1);
            box-shadow: 0 4px 12px rgba(127, 184, 211, 0.3);
        }

            .terms-checkbox input:checked + label .checkmark::after {
                content: '‚úì';
                position: absolute;
                color: white;
                font-size: 18px;
                font-weight: 900;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
            }

        .checkmark:hover {
            border-color: var(--deep-blue);
            transform: scale(1.05);
        }

        .terms-text {
            color: var(--text-dark);
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .terms-link {
            color: var(--deep-blue);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .terms-link:hover {
                color: var(--dark-blue);
                text-decoration: underline;
            }

        /* Register Button */
        .btn-register {
            background: var(--gradient-brand);
            color: white;
            /* border: none;
            border-radius: 16px;
            /* padding: 1rem 2rem; */
            /* font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            box-shadow: var(--shadow-medium);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin: 0rem auto 0;
            min-width: 50%;  */
        }

            .btn-register:hover:not(:disabled) {
                transform: translateY(-3px);
                box-shadow: var(--shadow-strong);
                background: linear-gradient(135deg, #4A90A4 0%, #7FB8D3 100%);
            }

            .btn-register:active:not(:disabled) {
                transform: translateY(-1px);
            }

            .btn-register:disabled {
                opacity: 0.7;
                cursor: not-allowed;
                transform: none;
            }

            .btn-register.loading span {
                opacity: 0;
            }

        .btn-loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .btn-register.loading .btn-loading {
            opacity: 1;
        }

        /* Form Footer */
        .form-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 2px solid var(--gray-100);
        }

            .form-footer p {
                color: var(--text-light);
                margin-bottom: 0.75rem;
                font-size: 0.95rem;
                font-weight: 500;
            }

        .login-link {
            color: var(--deep-blue);
            text-decoration: none;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 12px;
            background: rgba(127, 184, 211, 0.1);
        }

            .login-link:hover {
                color: var(--dark-blue);
                text-decoration: none;
                transform: translateY(-2px);
                background: rgba(127, 184, 211, 0.2);
                box-shadow: var(--shadow-soft);
            }

        /* Validation Styles */
        .text-danger {
            color: var(--red-accent);
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
        }

            .text-danger::before {
                content: '‚ö†';
                font-size: 1rem;
            }

        .field-validation-error {
            color: var(--red-accent);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }

        .input-validation-error {
            border-color: var(--red-accent);
            box-shadow: 0 0 0 4px rgba(255, 107, 122, 0.15);
            background: rgba(255, 107, 122, 0.05);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .register-page-container

        {
            padding: 1rem 0.5rem;
            min-height: calc(100vh - 75px);
        }

        .register-wrapper {
            padding: 2rem 1.5rem;
        }

        .register-header h2 {
            font-size: 1.7rem;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .form-section {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .section-title {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }

            .section-title i {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }

            .section-title h4 {
                font-size: 1.1rem;
            }

        .movie-element {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        }

        @@media (max-width: 480px) {
            .form-control, .form-select

        {
            padding: 0.75rem 3rem 0.75rem 2.5rem;
            font-size: 0.95rem;
        }

        .btn-register {
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            min-width: 180px;
        }

        .register-header h2 {
            font-size: 1.5rem;
        }

        .header-icon {
            width: 70px;
            height: 70px;
            font-size: 1.8rem;
        }

        .input-icon {
            left: 0.75rem;
            font-size: 1rem;
        }

        .password-toggle {
            right: 0.75rem;
            font-size: 1rem;
        }

        .terms-checkbox {
            gap: 0.75rem;
        }

        .terms-text {
            font-size: 0.9rem;
        }

        }

        /* Focus and Accessibility */
        .btn-register:focus-visible,
        .form-control:focus-visible,
        .form-select:focus-visible,
        .password-toggle:focus-visible,
        .terms-link:focus-visible,
        .login-link:focus-visible {
            outline: 3px solid var(--deep-blue);
            outline-offset: 2px;
        }

        /* Additional Enhancements */
        .form-control:focus, .form-select:focus {
            animation: inputGlow 0.3s ease;
        }

        @@keyframes inputGlow {
            0%

        {
            box-shadow: 0 0 0 0 rgba(127, 184, 211, 0.4);
        }

        50% {
            box-shadow: 0 0 0 6px rgba(127, 184, 211, 0.2);
        }

        100% {
            box-shadow: 0 0 0 4px rgba(127, 184, 211, 0.15);
        }

        }

        .btn-register::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .btn-register:active::before {
            width: 300px;
            height: 300px;
        }

        /* Section Animation */
        .form-section {
            animation: fadeInUp 0.6s ease-out;
        }

            .form-section:nth-child(1) {
                animation-delay: 0.1s;
            }

            .form-section:nth-child(2) {
                animation-delay: 0.2s;
            }

            .form-section:nth-child(3) {
                animation-delay: 0.3s;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
}

