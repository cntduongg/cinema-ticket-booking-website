@model MovieTheater.Web.Areas.UserManagement.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MovieTheater</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        /* Color Variables - Matching Homepage Theme */
        :root {
            --primary-blue: #E8F4FD;
            --secondary-blue: #D1E9F6;
            --accent-blue: #B8DDFF;
            --deep-blue: #7FB8D3;
            --dark-blue: #4A90A4;
            --text-dark: #1A365D;
            --text-light: #4A5568;
            --white: #FFFFFF;
            --gray-50: #F7FAFC;
            --gray-100: #EDF2F7;
            --gray-200: #E2E8F0;
            --red-accent: #FF6B7A;
            --green-accent: #48BB78;
            --gradient-primary: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 50%, var(--deep-blue) 100%);
            --gradient-secondary: linear-gradient(135deg, var(--secondary-blue) 0%, var(--primary-blue) 100%);
            --gradient-header: linear-gradient(135deg, rgba(26, 54, 93, 0.95) 0%, rgba(74, 144, 164, 0.9) 100%);
            --shadow-soft: 0 4px 20px rgba(127, 184, 211, 0.15);
            --shadow-medium: 0 8px 30px rgba(127, 184, 211, 0.2);
            --shadow-strong: 0 15px 40px rgba(127, 184, 211, 0.3);
            --border-radius: 20px;
            --border-radius-small: 12px;
        }

        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--gradient-primary);
            color: var(--text-dark);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .container {
            width: 100%;
            max-width: 500px;
        }

        /* Card Styles */
        .change-password-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--border-radius);
            padding: 3rem;
            box-shadow: var(--shadow-medium);
            backdrop-filter: blur(20px);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .change-password-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--gradient-header);
        }

        .change-password-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
        }

        /* Header */
        .card-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .card-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

        .card-title i {
            color: var(--deep-blue);
            font-size: 2.2rem;
        }

        .card-subtitle {
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 500;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1rem;
            z-index: 2;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1.25rem 1rem 3rem;
            border: 2px solid var(--gray-200);
            border-radius: var(--border-radius-small);
            font-size: 1rem;
            font-weight: 500;
            background: white;
            color: var(--text-dark);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--deep-blue);
            box-shadow: 0 0 0 4px rgba(127, 184, 211, 0.1);
            background: var(--gray-50);
        }

        .form-control::placeholder {
            color: var(--text-light);
            opacity: 0.7;
        }

        /* Validation */
        .text-danger {
            color: var(--red-accent) !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .form-control.is-invalid {
            border-color: var(--red-accent);
            box-shadow: 0 0 0 4px rgba(255, 107, 122, 0.1);
        }

        /* Alerts */
        .alert {
            padding: 1rem 1.5rem;
            border-radius: var(--border-radius-small);
            margin-bottom: 1.5rem;
            font-weight: 500;
            border: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .alert-success {
            background: linear-gradient(135deg, #48BB78, #68D391);
            color: white;
        }

        .alert-danger {
            background: linear-gradient(135deg, #FF6B7A, #FF8E8E);
            color: white;
        }

        /* Button */
        .btn {
            width: 100%;
            padding: 1.25rem 2rem;
            border: none;
            border-radius: var(--border-radius-small);
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background: var(--deep-blue);
            color: white;
            box-shadow: var(--shadow-soft);
        }

        .btn-primary:hover:not(:disabled) {
            background: var(--dark-blue);
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }

        .btn-primary:disabled {
            background: var(--gray-200);
            color: var(--text-light);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        /* Back Link */
        .back-link {
            text-align: center;
        }

        .back-link a {
            color: var(--text-light);
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .back-link a:hover {
            color: var(--deep-blue);
            background: var(--primary-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        /* Security Tips */
        .security-tips {
            background: var(--gradient-secondary);
            padding: 1.5rem;
            border-radius: var(--border-radius-small);
            margin-top: 1.5rem;
        }

        .security-tips h4 {
            color: var(--text-dark);
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .security-tips ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .security-tips li {
            color: var(--text-light);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .security-tips li i {
            color: var(--deep-blue);
            margin-top: 0.1rem;
            font-size: 0.8rem;
        }

        /* Loading States */
        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Password Strength Indicator */
        .password-strength {
            margin-top: 0.5rem;
            height: 4px;
            background: var(--gray-200);
            border-radius: 2px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak .password-strength-bar {
            width: 33%;
            background: var(--red-accent);
        }

        .strength-medium .password-strength-bar {
            width: 66%;
            background: #FFA500;
        }

        .strength-strong .password-strength-bar {
            width: 100%;
            background: var(--green-accent);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .change-password-card {
                padding: 2rem;
            }

            .card-title {
                font-size: 1.75rem;
                flex-direction: column;
                gap: 0.5rem;
            }

            .card-title i {
                font-size: 2rem;
            }

            .form-control {
                padding: 0.875rem 1rem 0.875rem 2.75rem;
                font-size: 0.95rem;
            }

            .btn {
                padding: 1rem 1.5rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .change-password-card {
                padding: 1.5rem;
            }

            .card-title {
                font-size: 1.5rem;
            }
        }

        /* Animation for page load */
        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Notification Modal Styles */
        .notification-modal-content {
            text-align: center;
            padding: 3rem 2rem;
            background: var(--gradient-primary);
            color: var(--text-dark);
        }

        .notification-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            color: white;
            animation: modalIconPulse 2s infinite;
        }

        .notification-icon.success {
            background: linear-gradient(135deg, #48BB78, #68D391);
        }

        .notification-icon.error {
            background: linear-gradient(135deg, #FF6B7A, #FF8E8E);
        }

        @@keyframes modalIconPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .notification-modal-content h4 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }

        .notification-modal-content p {
            font-size: 1.1rem;
            color: var(--text-light);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .notification-btn {
            background: var(--deep-blue);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .notification-btn:hover {
            background: var(--dark-blue);
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }
    </style>
</head>

<body class="fade-in">
    <div class="container">
        <div class="change-password-card">
            <div class="card-header">
                <h1 class="card-title">
                    <i class="fas fa-shield-alt"></i>
                    Đổi Mật Khẩu
                </h1>
                <p class="card-subtitle">Bảo vệ tài khoản của bạn bằng mật khẩu mạnh</p>
            </div>

            @if (TempData["Success"] != null || TempData["Error"] != null)
            {
                <input type="hidden" id="notificationData" 
                       data-type="@(TempData["Success"] != null ? "success" : "error")"
                       data-message="@(TempData["Success"] ?? TempData["Error"])" />
            }

            <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                <div class="form-group">
                    <label asp-for="OldPassword" class="form-label">
                        <i class="fas fa-key me-1"></i>Mật khẩu hiện tại
                    </label>
                    <div class="input-group">
                        <i class="input-icon fas fa-key"></i>
                        <input asp-for="OldPassword" class="form-control" type="password" placeholder="Nhập mật khẩu hiện tại" required />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label">
                        <i class="fas fa-lock me-1"></i>Mật khẩu mới
                    </label>
                    <div class="input-group">
                        <i class="input-icon fas fa-lock"></i>
                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nhập mật khẩu mới" required id="newPassword" />
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="password-strength-bar"></div>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="fas fa-check-circle me-1"></i>Xác nhận mật khẩu
                    </label>
                    <div class="input-group">
                        <i class="input-icon fas fa-check-circle"></i>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" required id="confirmPassword" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" id="submitButton">
                    <i class="fas fa-shield-alt"></i>
                    <span>Đổi mật khẩu</span>
                </button>
            </form>

            <div class="security-tips">
                <h4>
                    <i class="fas fa-lightbulb"></i>
                    Mẹo bảo mật
                </h4>
                <ul>
                    <li>
                        <i class="fas fa-check"></i>
                        Sử dụng ít nhất 8 ký tự
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Kết hợp chữ hoa, chữ thường, số và ký tự đặc biệt
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Tránh sử dụng thông tin cá nhân
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        Không chia sẻ mật khẩu với ai
                    </li>
                </ul>
            </div>

            <div class="back-link">
                <a href="/customer/homepage">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại trang thành viên
                </a>
            </div>
        </div>
    </div>

    <!-- Notification Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border: none; border-radius: 20px; overflow: hidden;">
                <div class="modal-body" style="padding: 0;">
                    <div class="notification-modal-content">
                        <div class="notification-icon">
                            <i id="notificationIcon"></i>
                        </div>
                        <h4 id="notificationTitle"></h4>
                        <p id="notificationMessage"></p>
                        <button type="button" class="notification-btn" data-bs-dismiss="modal">
                            <i class="fas fa-check"></i>
                            Đã hiểu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            // Notification Modal Handler
            function showNotificationModal(type, message) {
                const modal = document.getElementById('notificationModal');
                const icon = document.getElementById('notificationIcon');
                const title = document.getElementById('notificationTitle');
                const messageEl = document.getElementById('notificationMessage');
                const iconContainer = document.querySelector('.notification-icon');
                
                // Clear previous classes
                iconContainer.classList.remove('success', 'error');
                
                if (type === 'success') {
                    iconContainer.classList.add('success');
                    icon.className = 'fas fa-check-circle';
                    title.textContent = 'Thành công!';
                } else {
                    iconContainer.classList.add('error');
                    icon.className = 'fas fa-exclamation-circle';
                    title.textContent = 'Có lỗi xảy ra!';
                }
                
                messageEl.textContent = message;
                
                // Show modal
                const bootstrapModal = new bootstrap.Modal(modal);
                bootstrapModal.show();
            }

            document.addEventListener('DOMContentLoaded', function() {
                // Check for notifications on page load
                const notificationData = document.getElementById('notificationData');
                if (notificationData) {
                    const type = notificationData.getAttribute('data-type');
                    const message = notificationData.getAttribute('data-message');
                    setTimeout(() => showNotificationModal(type, message), 500);
                }

                const newPassword = document.getElementById('newPassword');
                const confirmPassword = document.getElementById('confirmPassword');
                const passwordStrength = document.getElementById('passwordStrength');
                const form = document.getElementById('changePasswordForm');
                const submitButton = document.getElementById('submitButton');

                // Password strength checker
                function checkPasswordStrength(password) {
                    let strength = 0;
                    if (password.length >= 8) strength++;
                    if (/[a-z]/.test(password)) strength++;
                    if (/[A-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[^A-Za-z0-9]/.test(password)) strength++;

                    passwordStrength.className = 'password-strength';
                    if (strength >= 3) passwordStrength.classList.add('strength-strong');
                    else if (strength >= 2) passwordStrength.classList.add('strength-medium');
                    else if (strength >= 1) passwordStrength.classList.add('strength-weak');
                }

                // Password confirmation validation
                function validatePasswordMatch() {
                    if (newPassword.value && confirmPassword.value) {
                        if (newPassword.value !== confirmPassword.value) {
                            confirmPassword.setCustomValidity('Mật khẩu xác nhận không khớp');
                            confirmPassword.classList.add('is-invalid');
                        } else {
                            confirmPassword.setCustomValidity('');
                            confirmPassword.classList.remove('is-invalid');
                        }
                    }
                }

                // Event listeners
                newPassword.addEventListener('input', function() {
                    checkPasswordStrength(this.value);
                    validatePasswordMatch();
                });

                confirmPassword.addEventListener('input', validatePasswordMatch);

                // Form submission
                form.addEventListener('submit', function() {
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Đang xử lý...</span>';
                    submitButton.disabled = true;
                });

                // Card animation on load
                const card = document.querySelector('.change-password-card');
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px) scale(0.95)';
                setTimeout(() => {
                    card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0) scale(1)';
                }, 100);
            });
        </script>
    }
</body>
</html>