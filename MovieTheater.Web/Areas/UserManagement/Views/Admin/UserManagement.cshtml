    function closeAlert(alertElement) {
        alertElement.style.animation = 'fadeOut 0.3s ease';
        setTimeout(() => {
            alertElement.remove();
        }, 300);
    }

    // Auto-hide alerts
    setTimeout(() => {
        document.querySelectorAll('.alert-3d').forEach(alert => {
            closeAlert(alert);
        });
    }, 5000);
</script>