<script>
    // Global variables
    let currentSortColumn = '';
    let currentSortDirection = 'asc';
    let confirmCallback = null;

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
        initializeSearch();
        initializeSorting();
    });

    // Search functionality
    function initializeSearch() {
        const searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('input', function() {
            performSearch(this.value);
        });
    }

    function performSearch(searchTerm) {
        const rows = document.querySelectorAll('.user-row-3d');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            if (text.includes(searchTerm.toLowerCase())) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Filter functionality
    function toggleFilter() {
        const filterPanel = document.getElementById('filterPanel');
        if (filterPanel.style.display === 'none') {
            filterPanel.style.display = 'flex';
        } else {
            filterPanel.style.display = 'none';
        }
    }

    function applyFilters() {
        const roleFilter = document.getElementById('roleFilter').value;
        const statusFilter = document.getElementById('statusFilter').value;
        const rows = document.querySelectorAll('.user-row-3d');

        rows.forEach(row => {
            let showRow = true;

            if (roleFilter && row.dataset.role !== roleFilter) {
                showRow = false;
            }

            if (statusFilter && row.dataset.status !== statusFilter) {
                showRow = false;
            }

            row.style.display = showRow ? '' : 'none';
        });

        toggleFilter();
    }

    // Sorting functionality
    function initializeSorting() {
        const sortableHeaders = document.querySelectorAll('.sortable');
        sortableHeaders.forEach(header => {
            header.addEventListener('click', function() {
                const column = this.dataset.sort;
                sortTable(column);
            });
        });
    }

    function sortTable(column) {
        if (currentSortColumn === column) {
            currentSortDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
        } else {
            currentSortColumn = column;
            currentSortDirection = 'asc';
        }

        // Update sort icons
        document.querySelectorAll('.sort-icon-3d').forEach(icon => {
            icon.className = 'fas fa-sort sort-icon-3d';
        });

        const currentHeader = document.querySelector(`[data-sort="${column}"] .sort-icon-3d`);
        currentHeader.className = `fas fa-sort-${currentSortDirection === 'asc' ? 'up' : 'down'} sort-icon-3d`;

        // Perform sort
        const tbody = document.querySelector('.user-table-3d tbody');
        const rows = Array.from(tbody.querySelectorAll('.user-row-3d'));

        rows.sort((a, b) => {
            let aVal = getCellValue(a, column);
            let bVal = getCellValue(b, column);

            if (!isNaN(aVal) && !isNaN(bVal)) {
                aVal = Number(aVal);
                bVal = Number(bVal);
            }

            if (currentSortDirection === 'asc') {
                return aVal > bVal ? 1 : -1;
            } else {
                return aVal < bVal ? 1 : -1;
            }
        });

        // Re-append sorted rows
        rows.forEach(row => tbody.appendChild(row));
    }

    function getCellValue(row, column) {
        const columnIndex = {
            'id': 0,
            'account': 1,
            'fullname': 2,
            'email': 3,
            'role': 4,
            'status': 5
        };

        return row.cells[columnIndex[column]].textContent.trim();
    }

    // Modal functionality
    function confirmDelete(userId, userName) {
        showConfirmModal(
            `Bạn có chắc chắn muốn khóa tài khoản "${userName}"?`,
            () => lockUser(userId)
        );
    }

    function confirmUnlock(userId, userName) {
        showConfirmModal(
            `Bạn có chắc chắn muốn mở khóa tài khoản "${userName}"?`,
            () => unlockUser(userId)
        );
    }

    function showConfirmModal(message, callback) {
        document.getElementById('confirmMessage').textContent = message;
        document.getElementById('confirmModal').style.display = 'flex';
        confirmCallback = callback;
    }

    function closeModal() {
        document.getElementById('confirmModal').style.display = 'none';
        confirmCallback = null;
    }

    document.getElementById('confirmBtn').addEventListener('click', function() {
        if (confirmCallback) {
            confirmCallback();
        }
        closeModal();
    });

