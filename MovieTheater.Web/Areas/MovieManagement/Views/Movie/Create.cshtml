@model MovieTheater.Web.Areas.MovieManagement.Models.MovieViewModel
@{
    ViewData["SidebarActive"] = "MovieManagement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm phim mới";
}

@section Styles {
    <link rel="stylesheet" href="~/css/add-film-admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

<div class="add-film-container">

    <div class="container">
        <div class="add-film-card col-lg-10 col-xl-8 mx-auto">
            <h2 class="page-title">
                <i class="bi bi-film"></i>
                Thêm phim mới
            </h2>

            <form asp-action="Create" method="post" class="add-film-form">
                @Html.AntiForgeryToken()

                <!-- Thông tin cơ bản -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="bi bi-info-circle"></i>
                        Thông tin cơ bản
                    </h3>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-camera-reels"></i>
                                Tên phim
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên phim..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 form-group">
                            <label asp-for="ReleaseDate" class="form-label">
                                <i class="bi bi-calendar-event"></i>
                                Ngày công chiếu
                            </label>
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                        </div>

                        <div class="col-md-4 form-group">
                            <label asp-for="RunningTime" class="form-label">
                                <i class="bi bi-stopwatch"></i>
                                Thời lượng (phút)
                            </label>
                            <input asp-for="RunningTime" class="form-control" type="number" min="0" placeholder="120" />
                        </div>

                        <div class="col-md-4 form-group">
                            <label asp-for="Version" class="form-label">
                                <i class="bi bi-badge-hd"></i>
                                Phiên bản
                            </label>
                            <input asp-for="Version" class="form-control" placeholder="2D, 3D, IMAX..." />
                        </div>
                    </div>
                </div>


                <!-- Thông tin sản xuất -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="bi bi-people"></i>
                        Thông tin sản xuất
                    </h3>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Actors" class="form-label">
                                <i class="bi bi-person-lines-fill"></i>
                                Diễn viên
                            </label>
                            <input asp-for="Actors" class="form-control" placeholder="Nguyễn Văn A, Trần Thị B..." />
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Director" class="form-label">
                                <i class="bi bi-camera-video"></i>
                                Đạo diễn
                            </label>
                            <input asp-for="Director" class="form-control" placeholder="Tên đạo diễn..." />
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="ProductionCompany" class="form-label">
                                <i class="bi bi-building"></i>
                                Hãng sản xuất
                            </label>
                            <input asp-for="ProductionCompany" class="form-control" placeholder="Tên hãng sản xuất..." />
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Type" class="form-label">
                                <i class="bi bi-tags"></i>
                                Thể loại
                            </label>
                            <input asp-for="Type" class="form-control" placeholder="Hành động, Phiêu lưu..." />
                        </div>
                    </div>
                </div>

                <!-- Nội dung và media -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="bi bi-file-text"></i>
                        Nội dung & Media
                    </h3>
                    <div class="row">
                        <div class="col-12 form-group">
                            <label asp-for="Content" class="form-label">
                                <i class="bi bi-journal-text"></i>
                                Nội dung phim
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="4" placeholder="Mô tả nội dung phim..."></textarea>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Trailer" class="form-label">
                                <i class="bi bi-play-circle"></i>
                                Link trailer
                            </label>
                            <input asp-for="Trailer" class="form-control" placeholder="https://youtube.com/..." />
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="ImagePath" class="form-label">
                                <i class="bi bi-image"></i>
                                Link ảnh poster
                            </label>
                            <input asp-for="ImagePath" class="form-control" placeholder="https://example.com/poster.jpg" />
                        </div>
                    </div>
                </div>

                <!-- Action buttons -->
                <div class="action-buttons">
                    <a asp-action="Index" class="btn-secondary-custom">
                        <i class="bi bi-arrow-left"></i>
                        Quay lại
                    </a>
                    <button type="submit" class="btn-primary-custom">
                        <i class="bi bi-check-circle"></i>
                        Tạo phim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus first input
            const firstInput = document.querySelector('.form-control');
            if (firstInput) {
                firstInput.focus();
            }

            // Add floating label effect
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });

                // Check if input has value on load
                if (input.value) {
                    input.parentElement.classList.add('focused');
                }
            });
        });
    </script>
}