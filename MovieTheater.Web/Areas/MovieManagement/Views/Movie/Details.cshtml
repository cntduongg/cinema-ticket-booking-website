@model MovieTheater.Web.Areas.MovieManagement.Models.MovieViewModel
@{
    ViewData["Title"] = Model.Name;
}

@section Styles {
    <style>
        /* Root Variables - Same as Homepage */
        :root {
            --primary-blue: #E8F4FD;
            --secondary-blue: #D1E9F6;
            --accent-blue: #B8DDFF;
            --deep-blue: #7FB8D3;
            --dark-blue: #4A90A4;
            --text-dark: #1A365D;
            --text-light: #4A5568;
            --white: #FFFFFF;
            --gray-50: #F7FAFC;
            --gray-100: #EDF2F7;
            --gray-200: #E2E8F0;
            --coral-red: #FF5A5A;
            --coral-hover: #FF4444;
            --gradient-primary: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 50%, var(--deep-blue) 100%);
            --gradient-secondary: linear-gradient(135deg, var(--secondary-blue) 0%, var(--primary-blue) 100%);
            --gradient-card: linear-gradient(135deg, #FFFFFF 0%, #F8FBFF 100%);
            --shadow-soft: 0 4px 20px rgba(127, 184, 211, 0.15);
            --shadow-medium: 0 8px 30px rgba(127, 184, 211, 0.2);
            --shadow-strong: 0 15px 40px rgba(127, 184, 211, 0.3);
            --border-radius: 20px;
        }

        /* Page Background */
        .details-bg {
            min-height: 100vh;
            background: var(--gradient-primary);
            padding: 40px 0;
        }

        /* Breadcrumb Styling */
        .movie-breadcrumb {
            background: rgba(255, 255, 255, 0.9);
            padding: 15px 25px;
            border-radius: 15px;
            box-shadow: var(--shadow-soft);
            margin-bottom: 30px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(184, 221, 255, 0.3);
        }

        .breadcrumb-home {
            color: var(--deep-blue);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .breadcrumb-home:hover {
            color: var(--dark-blue);
            text-decoration: none;
            transform: translateX(-3px);
        }

        .breadcrumb-home::before {
            content: "\f015";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
        }

        .breadcrumb-separator {
            margin: 0 15px;
            color: var(--text-light);
            font-weight: 600;
        }

        .breadcrumb-movie-title {
            color: var(--text-dark);
            font-weight: 700;
        }

        /* Section Cards */
        .details-section {
            margin-bottom: 40px;
        }

        .details-card {
            background: var(--gradient-card);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-medium);
            border: 1px solid rgba(184, 221, 255, 0.3);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .details-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
        }

        .card-header {
            background: var(--gradient-secondary);
            padding: 25px 30px;
            border-bottom: 1px solid rgba(184, 221, 255, 0.3);
        }

        .card-header h3 {
            color: var(--text-dark);
            margin: 0;
            font-size: 1.5rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-header h2 {
            color: var(--text-dark);
            margin: 0;
            font-size: 1.8rem;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .card-body {
            padding: 30px;
        }

        /* Trailer Section */
        .trailer-section {
            margin-bottom: 40px;
        }

        .trailer-video-wrapper {
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow-medium);
            background: var(--gray-100);
        }

        .trailer-video-wrapper iframe {
            border: none;
            width: 100%;
            height: 100%;
        }

        .no-trailer {
            background: var(--gradient-secondary);
            color: var(--text-light);
            border-radius: var(--border-radius);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 60px 20px;
        }

        .no-trailer i {
            color: var(--accent-blue);
            margin-bottom: 20px;
        }

        /* Movie Info Layout */
        .movie-main-info-row {
            margin-top: 0 !important;
        }

        .movie-poster-section {
            position: relative;
        }

        .movie-poster-card {
            background: var(--gradient-card);
            border-radius: var(--border-radius);
            padding: 30px;
            box-shadow: var(--shadow-medium);
            border: 1px solid rgba(184, 221, 255, 0.3);
            text-align: center;
            height: 100%;
            transition: all 0.3s ease;
        }

        .movie-poster-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
        }

        .movie-poster {
            width: 100%;
            max-width: 280px;
            border-radius: 15px;
            box-shadow: var(--shadow-medium);
            transition: all 0.3s ease;
        }

        .movie-poster:hover {
            transform: scale(1.05);
        }

        .genre-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            margin-top: 20px;
        }

        .genre-tag {
            background: var(--gradient-secondary);
            color: var(--deep-blue);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            border: 1px solid var(--accent-blue);
            transition: all 0.3s ease;
        }

        .genre-tag:hover {
            background: var(--deep-blue);
            color: white;
            transform: translateY(-2px);
        }

        /* Movie Info Card */
        .movie-info-card {
            background: var(--gradient-card);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-medium);
            border: 1px solid rgba(184, 221, 255, 0.3);
            transition: all 0.3s ease;
        }

        .movie-info-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
        }

        .movie-header {
            border-bottom: 2px solid var(--accent-blue);
            padding-bottom: 20px;
            margin-bottom: 25px;
        }

        .movie-title {
            color: var(--text-dark);
            font-size: 2.2rem;
            font-weight: 800;
            line-height: 1.3;
            margin-bottom: 15px;
        }

        .movie-status {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-soft);
        }

        .status-active {
            background: linear-gradient(135deg, #48BB78 0%, #38A169 100%);
            color: white;
        }

        .status-inactive {
            background: linear-gradient(135deg, var(--coral-red) 0%, var(--coral-hover) 100%);
            color: white;
        }

        .status-badge:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }

        .movie-description {
            color: var(--text-light);
            font-size: 1.1rem;
            line-height: 1.7;
            margin-bottom: 25px;
            padding: 20px;
            background: var(--gradient-secondary);
            border-radius: 15px;
            border-left: 4px solid var(--deep-blue);
        }

        /* Info Grid */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .info-item {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: var(--shadow-soft);
            border: 1px solid rgba(184, 221, 255, 0.3);
            transition: all 0.3s ease;
        }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
            border-color: var(--accent-blue);
        }

        .info-label {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--deep-blue);
            font-weight: 700;
            font-size: 0.95rem;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-label i {
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

        .info-value {
            color: var(--text-dark);
            font-weight: 600;
            font-size: 1rem;
            line-height: 1.4;
            padding-left: 30px;
        }

        /* Schedule Section */
        .schedule-card {
            margin-top: 40px;
        }

        .schedule-date-tabs {
            border-bottom: 2px solid var(--accent-blue);
            margin-bottom: 30px;
        }

        .schedule-date-tabs .nav-link {
            border: none;
            background: transparent;
            color: var(--text-light);
            font-weight: 600;
            padding: 15px 25px;
            border-radius: 12px 12px 0 0;
            transition: all 0.3s ease;
            position: relative;
        }

        .schedule-date-tabs .nav-link:hover {
            background: var(--primary-blue);
            color: var(--deep-blue);
            transform: translateY(-3px);
        }

        .schedule-date-tabs .nav-link.active {
            background: var(--deep-blue);
            color: white;
            box-shadow: var(--shadow-medium);
        }

        .schedule-date-text {
            font-size: 1.1rem;
            font-weight: 700;
        }

        /* Showtime Buttons */
        .showtime-btn-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .showtime-btn {
            background: white;
            border: 2px solid var(--accent-blue);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-soft);
            cursor: pointer;
        }

        .showtime-btn:hover {
            background: var(--deep-blue);
            color: white;
            transform: translateY(-5px);
            box-shadow: var(--shadow-medium);
            border-color: var(--deep-blue);
        }

        .showtime-time {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .showtime-btn:hover .showtime-time {
            color: white;
        }

        .showtime-seats {
            font-size: 0.9rem;
            color: var(--text-light);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

        .showtime-btn:hover .showtime-seats {
            color: rgba(255, 255, 255, 0.9);
        }

        /* Navigation Section */
        .navigation-section {
            margin-top: 50px;
            text-align: center;
        }

        .btn-outline-primary {
            background: transparent;
            border: 2px solid var(--deep-blue);
            color: var(--deep-blue);
            padding: 15px 30px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-soft);
        }

        .btn-outline-primary:hover {
            background: var(--deep-blue);
            color: white;
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
        }

        /* Loading Animation */
        .loading {
            text-align: center;
            padding: 40px 20px;
            color: var(--text-light);
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .loading::before {
            content: "";
            width: 20px;
            height: 20px;
            border: 2px solid var(--accent-blue);
            border-top: 2px solid var(--deep-blue);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Alert Styling */
        .alert {
            border: none;
            border-radius: 15px;
            padding: 20px 25px;
            font-weight: 600;
            box-shadow: var(--shadow-soft);
        }

        .alert-warning {
            background: linear-gradient(135deg, #FFF3CD 0%, #FFEAA7 100%);
            color: #856404;
            border-left: 4px solid #FFD93D;
        }

        .alert-danger {
            background: linear-gradient(135deg, #F8D7DA 0%, #F5C6CB 100%);
            color: #721c24;
            border-left: 4px solid var(--coral-red);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .details-bg {
                padding: 20px 0;
            }

            .movie-title {
                font-size: 1.8rem;
            }

            .info-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .showtime-btn-list {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
                gap: 15px;
            }

            .card-body {
                padding: 20px;
            }

            .card-header {
                padding: 20px;
            }

            .movie-poster-card {
                padding: 20px;
            }

            .breadcrumb-separator {
                margin: 0 10px;
            }
        }

        @@media (max-width: 480px) {
            .movie-title {
                font-size: 1.5rem;
            }

            .showtime-btn-list {
                grid-template-columns: 1fr;
            }

            .card-header h2 {
                font-size: 1.5rem;
            }

            .card-header h3 {
                font-size: 1.3rem;
            }
        }

        /* Animation Classes */
        .fade-in {
            animation: fadeIn 0.8s ease-out;
        }

        .slide-in-up {
            animation: slideInUp 0.6s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Additional Enhancements */
        .movie-poster-section::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            background: var(--gradient-primary);
            border-radius: calc(var(--border-radius) + 10px);
            z-index: -1;
            opacity: 0.3;
        }

        .details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: var(--border-radius) var(--border-radius) 0 0;
        }

        .details-card {
            position: relative;
        }
    </style>
}

<div class="details-bg">
    <div class="container">
        <!-- Breadcrumb -->
        <div class="movie-breadcrumb fade-in">
            <a href="/" class="breadcrumb-home">Trang chủ</a>
            <span class="breadcrumb-separator">›</span>
            <span class="breadcrumb-movie-title">@Model.Name</span>
        </div>

        <!-- Trailer Section -->
        <div class="details-section slide-in-up">
            <div class="details-card trailer-section">
                <div class="card-header">
                    <h2>
                        <i class="fas fa-play-circle"></i>
                        Trailer Phim
                    </h2>
                </div>
                <div class="card-body">
                    <div class="trailer-video-wrapper ratio ratio-16x9">
                        @if (!string.IsNullOrEmpty(Model.Trailer))
                        {
                            <iframe id="trailerFrame"
                                    src=""
                                    title="Trailer @Model.Name"
                                    allowfullscreen
                                    allow="autoplay; encrypted-media">
                            </iframe>
                        }
                        else
                        {
                            <div class="no-trailer">
                                <i class="fas fa-video-slash fa-4x"></i>
                                <h4>Trailer sẽ được cập nhật sớm</h4>
                                <p>Phim này hiện chưa có trailer. Hãy quay lại sau nhé!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Movie Information -->
        <div class="details-section slide-in-up">
            <div class="row g-4 movie-main-info-row">
                <!-- Movie Poster -->
                <div class="col-lg-4">
                    <div class="movie-poster-section">
                        <div class="movie-poster-card">
                            <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "https://via.placeholder.com/300x450?text=No+Image" : Model.ImagePath)"
                                 alt="@Model.Name"
                                 class="movie-poster" />

                            <div class="genre-tags">
                                @if (!string.IsNullOrEmpty(Model.Type))
                                {
                                    @foreach (var genre in Model.Type.Split(','))
                                    {
                                        <span class="genre-tag">
                                            <i class="fas fa-tag"></i>
                                            @genre.Trim()
                                        </span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Movie Details -->
                <div class="col-lg-8">
                    <div class="movie-info-card">
                        <div class="card-body">
                            <div class="movie-header">
                                <h1 class="movie-title">@Model.Name</h1>
                                <div class="movie-status">
                                    <span class="status-badge @(Model.Status ? "status-active" : "status-inactive")">
                                        <i class="fas @(Model.Status ? "fa-play-circle" : "fa-pause-circle")"></i>
                                        @(Model.Status ? "Đang chiếu" : "Sắp chiếu")
                                    </span>
                                </div>
                            </div>

                            <div class="movie-description">
                                <i class="fas fa-quote-left"></i>
                                @Model.Content
                            </div>

                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-user-tie"></i>
                                        <span>Đạo diễn</span>
                                    </div>
                                    <div class="info-value">@Model.Director</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-users"></i>
                                        <span>Diễn viên</span>
                                    </div>
                                    <div class="info-value">@Model.Actors</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-film"></i>
                                        <span>Thể loại</span>
                                    </div>
                                    <div class="info-value">@Model.Type</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-clock"></i>
                                        <span>Thời lượng</span>
                                    </div>
                                    <div class="info-value">@Model.RunningTime phút</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-language"></i>
                                        <span>Ngôn ngữ</span>
                                    </div>
                                    <div class="info-value">Tiếng Anh (Phụ đề)</div>
                                </div>

                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Ngày khởi chiếu</span>
                                    </div>
                                    <div class="info-value">@Model.ReleaseDate.ToString("dd/MM/yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Schedule Section -->
        <div class="details-section slide-in-up">
            <div class="details-card schedule-card" id="scheduleCard">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-calendar-alt"></i>
                        Lịch chiếu & Đặt vé
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Date Tabs -->
                    <ul class="nav nav-tabs schedule-date-tabs" id="dateTabs"></ul>
                    <!-- Showtime Content -->
                    <div id="showtimeTabContent"></div>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <div class="navigation-section slide-in-up">
            <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-arrow-left"></i>
                Quay lại
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Trailer URL Helper Function
        function getEmbedUrl(youtubeUrl) {
            if (!youtubeUrl) return "";
            let videoId = "";
            if (youtubeUrl.includes("watch?v=")) {
                videoId = youtubeUrl.split("watch?v=")[1].split("&")[0];
            } else if (youtubeUrl.includes("youtu.be/")) {
                videoId = youtubeUrl.split("youtu.be/")[1].split("?")[0];
            }
            return `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
        }

        // Initialize Trailer
        document.addEventListener('DOMContentLoaded', function () {
            var trailerUrl = '@Model.Trailer';
            var trailerFrame = document.getElementById('trailerFrame');
            if (trailerFrame && trailerUrl) {
                trailerFrame.src = getEmbedUrl(trailerUrl);
            }
        });

        // Get Next 7 Days
        function getNext7Days() {
            const days = [];
            const today = new Date();
            for (let i = 0; i < 7; i++) {
                const d = new Date(today);
                d.setDate(today.getDate() + i);
                days.push(d);
            }
            return days;
        }

        // Render Date Tabs
        function renderDateTabs(days) {
            const dateTabs = document.getElementById('dateTabs');
            dateTabs.innerHTML = '';
            days.forEach((d, idx) => {
                const dayNames = ['CN', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7'];
                const dayStr = d.getDate().toString().padStart(2, '0') + '/' + (d.getMonth() + 1).toString().padStart(2, '0');
                const dayName = dayNames[d.getDay()];

                dateTabs.innerHTML += `
                    <li class="nav-item">
                        <a class="nav-link${idx==0?' active':''}" data-bs-toggle="tab" href="#tab${idx}" data-date="${d.toLocaleDateString('en-GB').split('/').join('-')}">
                            <div class="schedule-date-text">
                                <div style="font-size: 1.1rem; font-weight: 700;">${dayStr}</div>
                                <div style="font-size: 0.9rem; opacity: 0.8;">${dayName}</div>
                            </div>
                        </a>
                    </li>
                `;
            });
        }

        // Fetch Showtimes
        async function fetchShowtimesForDay(dateObj) {
            const tabContent = document.getElementById('showtimeTabContent');
            tabContent.innerHTML = '<div class="loading">Đang tải suất chiếu...</div>';

            const day = dateObj.getDate().toString().padStart(2, '0');
            const month = (dateObj.getMonth() + 1).toString().padStart(2, '0');
            const year = dateObj.getFullYear();
            const dateParam = `${day}-${month}-${year}`;

            try {
                const baseUrl = '@(ViewBag.BookingServiceBaseUrl ?? "https://localhost:7092")';
                const response = await fetch(`${baseUrl}/api/GetMovieSchedule?movieId=@Model.Id&date=${dateParam}`);

                if (!response.ok) {
                    tabContent.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Không có suất chiếu nào cho ngày này.
                        </div>
                    `;
                    return;
                }

                const apiResult = await response.json();
                const showtimes = apiResult.$values || [];
                renderShowtimeTabContent(showtimes, dateParam);
            } catch (err) {
                tabContent.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Lỗi khi lấy suất chiếu. Vui lòng thử lại sau.
                    </div>
                `;
            }
        }

        // Render Showtime Content
        function renderShowtimeTabContent(showtimes, dateParam) {
            const tabContent = document.getElementById('showtimeTabContent');

            if (!Array.isArray(showtimes) || showtimes.length === 0) {
                tabContent.innerHTML = `
                    <div class="alert alert-warning">
                        <i class="fas fa-calendar-times me-2"></i>
                        Không có suất chiếu nào cho ngày này.
                    </div>
                `;
                return;
            }

            let html = '<div class="showtime-btn-list">';
            html += showtimes.map(st => {
                let time = st.fromTime ? st.fromTime.substring(0, 5) : '';
                return `
                    <button class="btn showtime-btn"
                        data-date="${dateParam}"
                        data-time="${st.fromTime}"
                        data-room="${st.cinemaRoom?.cinemaRoomName || ''}"
                        data-roomid="${st.cinemaRoomId}"
                        data-showdate="${st.showDate}">
                        <div class="showtime-time">
                            <i class="fas fa-clock"></i>
                            ${time}
                        </div>
                        <div class="showtime-seats" id="seats-${st.id}">
                            <i class="fas fa-spinner fa-spin"></i>
                            Đang tải...
                        </div>
                    </button>
                `;
            }).join('');
            html += '</div>';

            tabContent.innerHTML = html;

            // Fetch seat availability
            const baseUrl = '@(ViewBag.BookingServiceBaseUrl ?? "https://localhost:7092")';
            showtimes.forEach(st => {
                fetch(`${baseUrl}/api/schedule/${st.id}/available-seats`)
                    .then(res => res.json())
                    .then(data => {
                        const seatsElement = document.getElementById(`seats-${st.id}`);
                        if (seatsElement) {
                            seatsElement.innerHTML = `
                                <i class="fas fa-chair"></i>
                                ${data.availableSeats} ghế trống
                            `;
                        }
                    })
                    .catch(() => {
                        const seatsElement = document.getElementById(`seats-${st.id}`);
                        if (seatsElement) {
                            seatsElement.innerHTML = `
                                <i class="fas fa-question-circle"></i>
                                Không rõ
                            `;
                        }
                    });
            });
        }

        // Setup Date Tab Events
        function setupDateTabEvents(days) {
            const dateTabs = document.getElementById('dateTabs');
            setTimeout(() => {
                dateTabs.querySelectorAll('.nav-link').forEach((tab, idx) => {
                    tab.addEventListener('click', function() {
                        fetchShowtimesForDay(days[idx]);
                    });
                });
            }, 100);
        }

        // Handle Showtime Selection
        document.addEventListener('click', function(e) {
            if (e.target.closest('.showtime-btn')) {
                const btn = e.target.closest('.showtime-btn');
                const selectedDate = btn.getAttribute('data-showdate') || btn.getAttribute('data-date');
                const selectedTime = btn.getAttribute('data-time');

                // Add loading state to button
                btn.style.opacity = '0.7';
                btn.style.pointerEvents = 'none';

                // Navigate to booking page
                window.location.href = `/Booking/Booking/SeatMap?movieId=@Model.Id&date=${encodeURIComponent(selectedDate)}&time=${encodeURIComponent(selectedTime)}`;
            }
        });

        // Initialize Page
        document.addEventListener('DOMContentLoaded', function() {
            const days = getNext7Days();
            renderDateTabs(days);
            fetchShowtimesForDay(days[0]);
            setupDateTabEvents(days);

            // Add scroll animations
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            });

            document.querySelectorAll('.slide-in-up').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(50px)';
                el.style.transition = 'all 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
}